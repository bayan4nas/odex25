                            }

                            .droidkufi-font h2 {
                            margin-bottom:2px;
                            }

                            .droidkufi-font p {
                            margin-bottom:1px;
                            }

                            .droidkufi-font img {
                            margin-top:3px;
                            }
                        </style>

                        <div class="droidkufi-font" dir="rtl"
                             style="padding: 20px; margin-bottom: 50px; height: 90%;">
                            <t t-set="company" t-value="user.company_id"/>
                            <div class="header-container">
                                <img t-if="company.logo" t-att-src="image_data_uri(company.logo)"
                                     style="max-height:60px;" alt="Logo"/>
                                <div>
                                    <p>اللجنة الوطنية لرعاية السجناء "تراحم" الأمانة العامة
                                    </p>
                                </div>
                            </div>


                            <h2>تفاصيل المعاملة</h2>
                            <p>رقم المعاملة:
                                <t t-esc="doc.name"/>
                            </p>
                            <p>الموضوع:
                                <t t-esc="doc.subject"/>
                            </p>
                            <p>التاريخ:
                                <t t-esc="doc.transaction_date"/>
                            </p>
                            <p>المرفقات:
                                <t t-esc="doc.attachment_num"/>
                            </p>
                            <p>
                                <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', doc.name, 300, 50)"
                                     style="width:250px;height:40px;margin-top:5px;"/>
                            </p>
                            <!-- Add more details as needed -->
                        </div>

                    </t>
                </t>
            </t>
        </template>
