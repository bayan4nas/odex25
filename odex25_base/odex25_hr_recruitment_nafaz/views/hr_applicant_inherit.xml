<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <template id="assets__recruitment_backend" name="recruitment_assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/odex25_hr_recruitment_nafaz/static/src/js/website_hr_applicant_form.js"> </script>
            <script type="text/javascript" src="/odex25_hr_recruitment_nafaz/static/src/js/file_upload_widget.js"> </script>
        </xpath>
    </template>

    <record id="inherit_hr_recruitment_hr_applicant_view_form" model="ir.ui.view">
        <field name="name">hr.applicant.public.view.form.inherit</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
        <field name="arch" type="xml">
             <field name="email_from" position="attributes">
                  <attribute name="readonly">1</attribute>
             </field>
             <field name="name" position="attributes">
                  <attribute name="readonly">1</attribute>
             </field>
            <field name="partner_name" position="attributes">
                  <attribute name="readonly">1</attribute>
            </field>
            <field name="job_id" position="attributes">
                  <attribute name="readonly">1</attribute>
            </field>
            <field name="partner_phone" position="attributes">
                  <attribute name="readonly">1</attribute>
            </field>

            <field name="user_id" position="attributes">
                  <attribute name="readonly">1</attribute>
            </field>


            <xpath expr="//field[@name='type_id']" position="after">

                <field name="nationality" readonly="1"/>
                <field name="gender" readonly="1"/>
                <field name="idExpiryDateHijri" readonly="1"/>
                <field name="cardIssueDateGregorian" readonly="1"/>
                <field name="dob" readonly="1"/>
                <field name="dobHijri" readonly="1"/>
            </xpath>
            <xpath expr="//field[@name='source_id']" position="after">
                <field name="postOfficeBox" readonly="1"/>
                <field name="localityName" readonly="1"/>
                <field name="buildingNumber" readonly="1"/>
                <field name="street" readonly="1" />
            </xpath>
            <xpath expr="//h2[hasclass('o_row')]" position="before">
                <br/>
                <h2 class="o_row">
                    <div>
                        <label for="user_number_id" class="oe_edit_only"/>
                        <field name="user_number_id" readonly="1"/>
                    </div>
                </h2>
                <br/>
                <h2 class="o_row">
                    <div>
                        <label for="englishName" class="oe_edit_only"/>
                        <field name="englishName" readonly="1" />
                    </div>
                </h2>
                <br/>
            </xpath>
        </field>
    </record>

</odoo>
