<odoo>
    <data noupdate="1">
        <!-- Create the main API configuration record -->
        <record id="api_config_default" model="login.api.config">
            <field name="default">True</field>
            <field name="name">CONFIG NAME</field>
            <field name="url">https://restapi.smscountry.com/v0.1/Accounts/API_KEY/SMSes/</field>
            <field name="method">post</field>
            
            <!-- Mail Config -->
            <field name="mail_from">mailfrom@gmail.com</field>
            <field name="mail_server">smtp.gmail.com</field>
            <field name="mail_port">587</field>
            <field name="mail_pwd">nqwdychsdflvbjryn</field>
            <field name="mail_subject_start_with">App Name</field>
            <field name="mail_otp_msg">Your One-Time Password (OTP) is: {otp}. Please use this OTP to authenticate your login. Do not share this OTP with anyone.</field>
        </record>

        <!-- Create header records linked to the API configuration -->
        <record id="api_header_content_type" model="login.api.headers">
            <field name="api_config_id" ref="api_config_default"/>
            <field name="name">Header 1</field>
            <field name="key">Content-Type</field>
            <field name="value">application/json</field>
        </record>
        <record id="api_header_authorization" model="login.api.headers">
            <field name="api_config_id" ref="api_config_default"/>
            <field name="name">Header 2</field>
            <field name="key">Authorization</field>
            <field name="value">Basic c0gxa0NkRnFoSDhjUGFlMG5OMEY6SXF5SW5hasdasT3BHclJBdkasdddasdydWhyRk5tMlhmasdZ0VCMFhGUW1tYjRmcnQ4Sw==</field>
        </record>

        <!-- Create body records linked to the API configuration -->
        <record id="api_body_text" model="login.api.body">
            <field name="api_config_id" ref="api_config_default"/>
            <field name="name">Body 1</field>
            <field name="key">Text</field>
            <field name="value">Your One-Time Password (OTP) is: {otp}. Please use this OTP to authenticate your login. Do not share this OTP with anyone.</field>
        </record>
        <record id="api_body_number" model="login.api.body">
            <field name="api_config_id" ref="api_config_default"/>
            <field name="name">Body 2</field>
            <field name="key">Number</field>
            <field name="value">{mobile}</field>
        </record>
        <record id="api_body_sender_id" model="login.api.body">
            <field name="api_config_id" ref="api_config_default"/>
            <field name="name">Body 3</field>
            <field name="key">SenderId</field>
            <field name="value">APP NAME OTP</field>
        </record>
        <record id="api_body_notify_url" model="login.api.body">
            <field name="api_config_id" ref="api_config_default"/>
            <field name="name">Body 4</field>
            <field name="key">DRNotifyUrl</field>
            <field name="value">{base_url}/notifyurl</field>
        </record>
        <record id="api_body_notify_method" model="login.api.body">
            <field name="api_config_id" ref="api_config_default"/>
            <field name="name">Body 5</field>
            <field name="key">DRNotifyHttpMethod</field>
            <field name="value">POST</field>
        </record>
        <record id="api_body_notify_tool" model="login.api.body">
            <field name="api_config_id" ref="api_config_default"/>
            <field name="name">Body 6</field>
            <field name="key">Tool</field>
            <field name="value">API</field>
        </record>
    </data>
</odoo>