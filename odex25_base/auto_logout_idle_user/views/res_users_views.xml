<?xml version="1.0" encoding="Big5" ?>
<odoo>

     <record id="res_config_settings_view_time_idle_user_out_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.time_idle_user_out</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="20"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="IDLE TIMER" string="Session Timeout" data-key="session" groups="base.group_system">
                    <div name="session">
                        <h2>Session Timeout</h2>
                        <div class="row mt16 o_settings_container" name="session">
                            <div class="col-12 col-md-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Session Timeout</span>
                                    <div class="text-muted">Define the Session Timeout time</div>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label class="col-md-3 o_light_label" for="idle_time"/>
                                             <field name="idle_time" widget="float_time"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

