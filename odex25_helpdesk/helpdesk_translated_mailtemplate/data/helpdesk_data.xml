<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="0">

    <record id="odex25_helpdesk.new_ticket_request_email_template" model="mail.template">
        <field name="name">New Ticket Request</field>
        <field name="email_from">${object.user_id.email_formatted | safe}</field>
        <field name="subject">${object.display_name}</field>
        <field name="model_id" ref="odex25_helpdesk.model_odex25_helpdesk_ticket"/>
        <field name="email_to">
            ${('' if object.partner_id and object.sudo().partner_id.email and object.sudo().partner_id.email==object.partner_email else object.partner_email|safe)}
        </field>
        <field name="partner_to">
            ${object.partner_id and object.sudo().partner_id.email and object.sudo().partner_id.email==object.partner_email and object.sudo().partner_id.id or False}
        </field>
        <field name="auto_delete" eval="False"/>
        <field name="body_html" type="xml">
            <style>
                @font-face {
                font-family: almarai;
                src: url("/helpdesk_translated_mailtemplate/static/src/fonts/Almarai-Regular.ttf")
                }

                @font-face {
                font-family: almarai;
                src: url("/helpdesk_translated_mailtemplate/static/src/fonts/Almarai-Light.ttf");
                font-weight: 300
                }

                @font-face {
                font-family: almarai;
                src: url("/helpdesk_translated_mailtemplate/static/src/fonts/Almarai-Bold.ttf");
                font-weight: 700
                }

                @font-face {
                font-family: almarai;
                src: url("/helpdesk_translated_mailtemplate/static/src/fonts/Almarai-ExtraBold.ttf");
                font-weight: 900
                }
            </style>

            <table align="center" style="width: 800px;margin:5px auto;direction:initial;">
                <tbody>
                    <tr>
                        <td>
                            <div style="width: 800px;margin:5px auto;">
                                <div clas="logo-section">
                                    <img src="/helpdesk_translated_mailtemplate/static/src/img/taqeem.png"
                                         class="float-left" height="100px"
                                         style="height: 100px; margin-top:20px;margin-bottom:20px;" alt="Logo"/>
                                </div>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>

            <table align="center" style="width:700px;margin:5px auto;direction:initial;">
                <tbody>
                    <tr>
                        <td dir="ltr" style="text-align:left;width: 50%;color:#757575;vertical-align: baseline;">
                            <h4 style="font-weight: bold;font-family:almarai, Arial, Helvetica, sans-serif !important;">
                                <span>HI</span>
                                ,
                                <span>${object.sudo().partner_id.name or 'Madam, Sir'}</span>
                            </h4>
                            <p style="font-family:almarai, Arial, Helvetica, sans-serif !important;margin-top:50px;line-height: 30px;font-size:14px;">
                                <span>This is an automatic message :</span>
                                <br/>
                                <span>Your request</span>
                                % if object.access_token:
                                <!-- <a href="/helpdesk/ticket/${object.id}/${object.access_token}"> -->
                                <span style="font-weight: bold;">" ${object.name} "</span>
                                <!-- </a> -->
                                % endif
                                <span>has been received and reviewed by
                                    <br/>
                                    our
                                    <span style="font-weight: bold;">${object.team_id.name or ''}</span>
                                </span>
                                <br/>
                                <span>The reference of your ticket is
                                    <span style="font-weight: bold;">${object.id}</span>
                                </span>
                                <br/>
                                <span>To additional comments reply to this email.</span>
                            </p>
                            <p style="font-family:almarai, Arial, Helvetica, sans-serif !important;margin-top: 50px;font-weight: bold;line-height: 30px;">
                                <span style="">Best Regards,</span>
                                <br/>
                                <span style="">${object.team_id.name or 'Helpdesk'} Team</span>
                            </p>
                        </td>
                        <!-- Arabic -->
                        <td dir="rtl" style="text-align:right;width: 50%;color:#757575;display: contents;">
                            <h4 style="font-family:almarai, Arial, Helvetica, sans-serif !important;color:#6d6d6d;">
                                <span>مرحباً</span>
                                ,
                                <span>${object.sudo().partner_id.name or 'سيدي، سيدتي'}</span>
                            </h4>
                            <p style="font-family:almarai, Arial, Helvetica, sans-serif !important;margin-top:50px;line-height: 30px;font-size:14px;">
                                <span>هذه الرسالة تلقائية ، نفيدكم أنه تم استلام</span>
                                <br/>
                                <span>طلبك</span>
                                % if object.access_token:
                                <!-- <a href="/helpdesk/ticket/${object.id}/${object.access_token}"> -->
                                <span style="font-weight: bold;color:#6d6d6d;">${object.name}</span>
                                <!-- </a> -->
                                % endif
                                <span>
                                    <span>و هو قيد المراجعة الآن، من قبل فريق</span>
                                    <span style="font-weight: bold;">${object.team_id.name or ''}</span>
                                </span>
                                <br/>
                                <span>
                                    <span>الرقم المرجعي لطلبك هو :</span>
                                    <span style="font-weight: bold;">${object.id}</span>
                                </span>
                                <br/>
                                <span>لإضافة المزيد من التعليقات، الرجاء الرد على هذا البريد الإلكتروني.</span>
                                <br/>
                            </p>
                            <p style="font-family:almarai, Arial, Helvetica, sans-serif !important;margin-top: 50px;line-height: 30px;font-size:14px;">
                                <span>اطيب التحايا</span>
                                <br/>
                                <span>فريق</span>
                                <span style="font-weight: bold;">${object.team_id.name or 'Helpdesk'}</span>
                            </p>
                        </td>
                    </tr>
                </tbody>
            </table>


            <table align="center" style="width:700px;margin:5px auto;direction:initial;">
                <tbody>
                    <tr>
                        <td>
                            <div style="width: 100px;background-color:#45AE54;padding: 10px 0;text-align: center;margin:5px auto;margin-top:50px"
                                 bgcolor="#45AE54">
                                % if object.access_token:
                                <a href="/helpdesk/ticket/${object.id}/${object.access_token}"
                                   style="color:white !important">Ticket
                                </a>
                                % endif
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>

        </field>
    </record>

    <record id="odex25_helpdesk.solved_ticket_request_email_template" model="mail.template">
