<?xml version="1.0"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="employee_custody_action">
            <field name="name">Employee Custody</field>
            <field name="res_model">custom.employee.custody</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="employee_custody_form_view">
            <field name="name">Employee Custody</field>
            <field name="model">custom.employee.custody</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="direct" string="Submit" class="oe_highlight" type="object"
                                states="draft"/>
                        <button name="admin" string="Direct" class="oe_highlight" type="object"
                                states="direct"
                                groups="exp_employee_custody.group_custody_department_manager"/>
                        <button name="refuse" string="Refuse" class="oe_highlight" type="object"
                                states="direct"
                                groups="exp_employee_custody.group_custody_manager"/>

                        <button name="approve" string="Admin" class="oe_highlight" type="object"
                                states="admin"
                                groups="exp_employee_custody.group_custody_hr_approval"/>
                        <button name="refuse" string="Refuse" class="oe_highlight" type="object"
                                states="admin"
                                groups="exp_employee_custody.group_custody_hr_approval"/>

                        <button name="done" string="approve" class="oe_highlight" type="object"
                                states="approve"
                                groups="stock.group_stock_manager"/>
                        <button name="finish" string="Done" class="oe_highlight" type="object"
                                states="assign"
                                groups="exp_employee_custody.group_custody_manager,stock.group_stock_manager"/>
                        <button name="refuse" string="Refuse" class="oe_highlight" type="object"
                                states="approve" groups="stock.group_stock_manager"/>


                        <button name="draft" string="Rest To Draft" class="oe_highlight" type="object"
                                states="done"
                                groups="hr.group_hr_user"/>
                        <button name="draft" string="Rest To Draft" class="oe_highlight" type="object"
                                states="refuse"
                                groups="hr.group_hr_user"/>
                        <field statusbar_visible="draft,direct,admin,approve,wait_release,assign,wait,done,refuse"
                               name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="current_date" string="Date" required="1"
                                       attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="from_hr_department" string="Other Employee"
                                       attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="employee_id" string="Employee"
                                       attrs="{'readonly': [('from_hr_department','=',False)],'required':True}"/>
                                <field name="employee_no" string="Employee Number" readonly="1"/>
                            </group>
                            <group>
                                <field name="department_id" string="Department" readonly="1"/>
                                <field name="job_id" string="Job Title" readonly="1"/>
                                <field name="country_id" string="Nationality" readonly="1"/>
                                <field name="receiving_custody" string="receiving_custody" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Custody Lines">
                                <field name="custody_line_ids"
                                       attrs="{'readonly':[('state','!=','draft')]}">
                                    <tree string="Custody Lines" editable="top">
                                        <field name="name" required="1" string="Description"/>
                                        <field name="serial" string="Identification code"
                                               groups="hr.group_hr_user,hr_base.group_general_manager,hr_base.group_executive_manager"/>
                                        <field name="quantity" required="1" string="Quantity"/>
                                        <field name="receiving_quantity" readonly="1" string="Receiving Quantity"/>
                                        <field name="note" string="Notes"/>
                                        <field name="receiving_date" string="Date Delivering"/>
                                        <field name="amount" string="Amount" readonly="1"
                                               groups="hr.group_hr_user,hr_base.group_general_manager,hr_base.group_executive_manager"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <field name="note"/>
                    </sheet>

                    <!--Discuss widgets for history and communication -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="employee_custody_tree_view">
            <field name="name">Employee Custody</field>
            <field name="model">custom.employee.custody</field>
            <field name="arch" type="xml">
                <tree decoration-danger="state == 'refuse'" decoration-info="state == 'draft'"
                      string="Employee Custody">
                    <field name="current_date" string="Date"/>
                    <field name="employee_id" string="Employee"/>
                    <field name="department_id" string="Department"/>
                    <field name="state" string="Status"/>
                </tree>
            </field>
        </record>
        <!---->
        <!-- Inherit Form View to Modify it -->
        <record id="view_account_asset_operation_form_extend" model="ir.ui.view">
            <field name="name">view_account_asset_operation_form_inherit</field>
            <field name="model">account.asset.operation</field>
            <field name="inherit_id" ref="exp_asset_custody.view_account_asset_operation_form"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='act_confirm']" position="attributes">
                    <attribute name="groups">exp_employee_custody.group_custody_manager</attribute>
                </xpath>
                <xpath expr="//button[@name='act_reject']" position="attributes">
                    <attribute name="groups">exp_employee_custody.group_custody_manager</attribute>
                </xpath>
                <xpath expr="//button[@name='act_draft']" position="attributes">
                    <attribute name="groups">exp_employee_custody.group_custody_manager</attribute>
                </xpath>

            </field>
        </record>
        <!--        -->
        <menuitem name="Custody" id="custody_submenu"
                  parent="employee_requests.employee_request_menu_item" sequence="11"/>

        <menuitem name="Employee Custody" id="employee_custody"
                  parent="custody_submenu" action="employee_custody_action"/>


    </data>
</odoo>
