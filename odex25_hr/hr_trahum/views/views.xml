<odoo>


    <record id="view_department_form" model="ir.ui.view">
        <field name="name">hr.department.form</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_form"/>
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <field name="employee_type_id" string="Transfer Type"/>
            </field>
        </field>
    </record>

    <record id="view_hr_contract_form" model="ir.ui.view">
        <field name="name">hr.contract.form</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='draft_state']" position="before">
                <button name="action_sector_head_approval" string="Sector Head Approval" type="object"
                        states="hr_head_approval" class="oe_highlight" groups="hr_base.group_services_manager"/>

            </xpath>
            <xpath expr="//button[@name='program_directory']" position="replace"/>


            <xpath expr="//button[@name='action_sector_head_approval']" position="before">
                <button name="action_secret_general" string="Secret General Approved" type="object"
                        states="secret_general" class="oe_highlight" groups="hr_trahum.group_secret_general"/>
            </xpath>

            <xpath expr="//header/field[@name='state']" position="replace">
                <field name="state" widget="statusbar"
                       statusbar_visible="draft,employeed_aproval,hr_head_approval,program_directory,end_contract"/>

            </xpath>
        </field>
    </record>
    <record id="view_hr_re_contract_form" model="ir.ui.view">
        <field name="name">hr.re.contract.form</field>
        <field name="model">hr.re.contract</field>
        <field name="inherit_id" ref="hr_contract_custom.view_re-contracting_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_done']" position="attributes">
                <attribute name="states">secretary_general</attribute>
                <attribute name="groups">hr_trahum.group_secretary_general</attribute>
            </xpath>

            <xpath expr="//button[@name='action_done']" position="after">
                <button name="action_done" string="Executive manager" states="executive_manager" type="object" class="oe_highlight"
                        groups="hr_base.group_executive_manager"/>
                <button name="action_refuse" type="object" string="Refuse" states="executive_manager"
                        class="oe_highlight"
                        groups="hr_base.group_executive_manager"/>
                <button name="action_refuse" type="object" string="Refuse" states="secretary_general"
                        class="oe_highlight"
                        groups="hr_trahum.group_secretary_general"/>
                <button name="action_re_hr_manager" string="Roll Back" states="secretary_general" class="oe_highlight"
                        groups="hr_trahum.group_secretary_general" type="object"/>

            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="statusbar_visible">submitted,direct_manager,done</attribute>
            </xpath>
            <xpath expr="//field[@name='employee_id']" position="attributes">
                <attribute name="attrs">{'readonly':[('state','not in','submitted')]}
                </attribute>
            </xpath>

            <xpath expr="//button[@name='action_submit']" position="attributes">
                <attribute name="states">submitted</attribute>
            </xpath>
            <xpath expr="//button[@name='action_direct_manager']" position="attributes">
                <attribute name="states">direct_manager</attribute>
            </xpath>
            <xpath expr="//button[@name='action_hr_manager']" position="attributes">
                <attribute name="states">hr_manager</attribute>
            </xpath>

        </field>
    </record>



    <record id="employee_overtime_request_inherit" model="ir.ui.view">
        <field name="name">Employee Overtime Request Trahum Form Inherit</field>
        <field name="model">employee.overtime.request</field>
        <field name="inherit_id" ref="employee_requests.employee_overtime_request_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="replace">
                <header>
                    <!-- Add a button for sector head approval -->
                    <button name="submit" string="Submit" class="oe_highlight" type="object" states="draft"
                            groups="base.group_user"/>
                    <button name="direct_manager" string="Direct Manager Approve" class="oe_highlight" type="object"
                            states="submit" groups="hr_base.group_division_manager"/>
                    <button name="direct_manager_refused" string="Refuse" class="oe_highlight" type="object"
                            states="submit" groups="hr_base.group_division_manager"/>
                    <button name="financial_manager" string="Department Manager" class="oe_highlight" type="object"
                            states="direct_manager" groups="hr.group_hr_user"/>
                    <button name="dep_manager_refused" string="Refuse" class="oe_highlight" type="object"
                            states="direct_manager" groups="hr.group_hr_user"/>
                    <button name="hr_aaproval" string="HR Approval" class="oe_highlight" type="object"
                            states="financial_manager" groups="hr.group_hr_manager"/>
                    <button name="refused" string="Refuse" class="oe_highlight" type="object"
                            states="financial_manager" groups="hr.group_hr_manager"/>
                    <button name="executive_office" string="Head Sector Approval" class="oe_highlight" type="object"
                            groups="hr_trahum.group_sector_head_approval"
                            attrs="{'invisible':[('state','!=','hr_aaproval')]}"/>
                    <button name="refused" string="Refuse" class="oe_highlight" type="object"
                            groups="hr_base.group_general_manager,hr_base.group_executive_manager,hr_trahum.group_sector_head_approval"
                            attrs="{'invisible':[('state','!=','hr_aaproval')]}"/>
