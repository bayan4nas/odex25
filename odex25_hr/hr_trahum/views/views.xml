                            groups="hr_base.group_services_manager"
                            attrs="{'invisible':[('state','!=','hr_aaproval2')]}"/>
                    <button name="refused" string="Refuse" class="oe_highlight" type="object"
                            groups="hr_base.group_services_manager"
                            attrs="{'invisible':[('state','!=','hr_aaproval2')]}"/>

                    <button name="secret_general_approval" string="Secret General Approval" class="oe_highlight"
                            type="object"
                            groups="hr_trahum.group_secret_general" states="secret_general"/>
                    <button name="refused" string="Refuse" class="oe_highlight" type="object"
                            states="secret_general" groups="hr_trahum.group_secret_general"/>


                    <button name="validated" string="General Manager" class="oe_highlight" type="object"
                            groups="hr_trahum.group_secretary_general" states="executive_office"/>
                    <button name="refused" string="Refuse" class="oe_highlight" type="object"
                            states="executive_office" groups="hr_trahum.group_secretary_general"/>

                    <button name="validated" string="Approval" class="oe_highlight" type="object"
                            groups="hr_base.group_executive_manager" states="executive_office2"/>
                    <button name="refused" string="Refuse" class="oe_highlight" type="object"
                            states="executive_office2" groups="hr_base.group_executive_manager"/>


                    <button name="re_draft" string="RE-Draft" class="oe_highlight" type="object"
                            states="refused,validated" groups="hr.group_hr_user"
                            confirm="Are you sure to Reset To Draft This Record?"/>

                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,submit,direct_manager,financial_manager,validated"/>
                </header>
            </xpath>
        </field>
