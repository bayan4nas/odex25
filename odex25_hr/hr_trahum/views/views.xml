<odoo>


    <record id="view_department_form" model="ir.ui.view">
        <field name="name">hr.department.form</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_form"/>
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <field name="employee_type_id" string="Transfer Type"/>
            </field>
        </field>
    </record>

    <record id="view_hr_contract_form" model="ir.ui.view">
        <field name="name">hr.contract.form</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_sector_head_approval" string="Sector Head Approval" type="object"
                        states="hr_head_approval" class="oe_highlight" groups="hr_trahum.group_sector_head_approval"/>

            </xpath>
            <xpath expr="//button[@name='program_directory']" position="attributes">
                <attribute name="states">sector_head_approval</attribute>
            </xpath>
            <xpath expr="//header/field[@name='state']" position="replace">
                <field name="state" widget="statusbar"
                       statusbar_visible="draft,employeed_aproval,hr_head_approval,sector_head_approval,program_directory,end_contract"/>

            </xpath>
        </field>
    </record>


    <record id="employee_loan_salary_form_view_inherit" model="ir.ui.view">
        <field name="name">Employee Loan Salary Form View Inherit</field>
        <field name="model">hr.loan.salary.advance</field>
        <field name="inherit_id" ref="hr_loans_salary_advance.employee_loan_salary_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                 <button name="action_director_financial_management"
                        string="Director Financial Management"
                        type="object"
                        states="direct_manager"
                        class="oe_highlight"
                        groups="hr_trahum.group_Director_Financial_Management"/>
                <button name="refused" string="Refuse" states="director_financial_management" type="object"
                        groups="hr_trahum.group_Director_Financial_Management" class="oe_highlight"/>
                <button name="action_sector_head_approval"
                        string="Sector Head Approval"
                        type="object"
                        states="director_financial_management"
                        class="oe_highlight"
                        groups="hr_trahum.group_sector_head_approval"/>
                <button name="refused" string="Refuse" states="sector_head_approval" type="object"
                        groups="hr_loans_salary_advance.group_loan_manager" class="oe_highlight"/>
            </xpath>

            <xpath expr="//button[@name='hr_manager']" position="attributes">
                <attribute name="states">sector_head_approval</attribute>
            </xpath>
            <xpath expr="//header/field[@name='state']" position="replace">
                <field name="state" widget="statusbar"
                       statusbar_visible="draft,submit,direct_manager,director_financial_management,sector_head_approval,hr_manager,executive_manager,pay,closed,refused"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="employee_official_mission_form_view_inherit">
        <field name="name">Inherited Employee Official form Mission</field>
        <field name="model">hr.official.mission</field>
        <field name="inherit_id" ref="exp_official_mission.employee_official_mission_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//header" position="inside">
                <button name="action_sector_head_approval" string="Sector Head Approval" type="object"
                        states="depart_manager" class="oe_highlight" groups="hr_trahum.group_sector_head_approval"/>
            </xpath>

            <xpath expr="//button[@name='hr_aaproval']" position="attributes">
                <attribute name="states">sector_head_approval</attribute>
            </xpath>

            <xpath expr="//button[@name='hr_aaproval']" position="after">
                <button name="refused" string="Refused" class="oe_highlight" type="object"
                        states="sector_head_approval"
                        groups="hr_base.group_general_manager,hr_base.group_executive_manager"/>
            </xpath>

        </field>
    </record>


    <!--Hide menuitem Buy a permit-->
    <record id="hr_holidays_public.buy_vacation_menu_item" model="ir.ui.menu">
        <field name="active">False</field>
    </record>


    <record id="edit_holiday_status_form" model="ir.ui.view">
        <field name="name">hr.holidays.status.form - Add compute fields</field>
        <field name="model">hr.holidays.status</field>
        <field name="inherit_id" ref="hr_holidays_community.edit_holiday_status_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='advance_request_years']" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
        </field>
    </record>

    <record id="hr_ticket_custom_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.ticket.form.inherit</field>
        <field name="model">hr.ticket.request</field>
        <field name="inherit_id" ref="exp_ticket_request.hr_ticket_request_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='leave_request_id']" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='vacation_start_date']" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='vacation_end_date']" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='vacation_duration']" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>

        </field>
    </record>

    <record id="hr_payroll_raise_form_view_inherit" model="ir.ui.view">
        <field name="name">Employee Raise FormInherit</field>
        <field name="model">hr.payroll.raise</field>
        <field name="inherit_id" ref="exp_payroll_promotion.hr_payroll_raise_form_view"/>
        <field name="arch" type="xml">
           <xpath expr="//header" position="inside">
                <button name="action_sector_head_approval" string="Sector Head Approval" type="object"
                        states="confirm" class="oe_highlight" groups="hr_trahum.group_sector_head_approval"/>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_secretary_general" string="Secretary General" type="object"
                        states="sector_head_approval" class="oe_highlight" groups="hr_trahum.group_secretary_general"/>
            </xpath>
            <xpath expr="//button[@name='action_secretary_general']" position="after">

                <button string="Refuse" name="act_refuse" states="hr_officer" type="object" class="oe_highlight"
                        groups="hr.group_hr_manager"/>
            </xpath>
            <!--            <xpath expr="//button[@name='action_sector_head_approval']" position="before">-->

            <!--              <button string="Refuse" name="act_refuse" states="act_approve" type="object" class="oe_highlight"-->
            <!--                                groups="hr.group_hr_manager"/>-->
            <!--                </xpath>-->

            <xpath expr="//button[@name='act_refuse']" position="attributes">
                <attribute name="states">sector_head_approval</attribute>
            </xpath>

            <xpath expr="//button[@name='act_approve']" position="attributes">
                <attribute name="states">secretary_general</attribute>
            </xpath>
        </field>
    </record>


    <record id="termination_resignation_inherit_form_view" model="ir.ui.view">
        <field name="name">Employee Raise eos inherit FormInherit</field>
        <field name="model">hr.termination</field>
        <field name="inherit_id" ref="hr_termination.termination_resignation_eos_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_sector_head_approval" string="Sector Head Approval" type="object"
                        states="finance_manager" class="oe_highlight" groups="hr_trahum.group_sector_head_approval"/>
                <button class="oe_highlight" string="Refuse" type="object" name="refused"
                        states="sector_head_approval" groups="hr.group_hr_user"/>
            </xpath>
            <xpath expr="//button[@name='general_manager']" position="attributes">
                <attribute name="states">sector_head_approval</attribute>
            </xpath>

        </field>
    </record>


    <record id="hr_payslip_run_inherit_form_inherit" model="ir.ui.view">
        <field name="name">hr.payslip.run.form.inherit.inherit</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="exp_hr_payroll.hr_payslip_run_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_sector_head_approval" string="Sector Head Approval" type="object"
                        states="accounting_head_approval" class="oe_highlight" groups="hr_trahum.group_sector_head_approval"/>
                <button name="action_accounting_head_approval" string="Head Accounting Approval" type="object"
                        states="confirmed" class="oe_highlight" groups="hr_trahum.group_Director_Financial_Management"/>
                <button name="action_secretary_general" string="Secretary General" type="object"
                        states="sector_head_approval" class="oe_highlight" groups="hr_trahum.group_secretary_general"/>
<!--                <button name="withdraw" type="object"  string="Withdraw"-->
<!--                        class="oe_highlight"-->
<!--                        groups="hr.group_hr_manager" confirm="Are you sure to Delete Compute Salaries?"/>-->
<!--                  <button name="withdraw" type="object"  string="Withdraw"-->
<!--                        class="oe_highlight"-->
<!--                        groups="hr.group_hr_manager" confirm="Are you sure to Delete Compute Salaries?"/>-->
                <button name="close_payslip_run" type="object" string="Close" states="sector_head_approval,accounting_head_approval,secretary_general" groups="hr_trahum.group_secretary_general"/>
                <button name="close_payslip_run" type="object" string="Close" states="confirmed" groups="hr_trahum.group_sector_head_approval"/>
            </xpath>
            <xpath expr="//button[@name='return_button']" position="attributes">
                <attribute name="states">confirmed,transfered,accounting_head_approval,sector_head_approval,secretary_general</attribute>
            </xpath>
            <xpath expr="//button[@name='transfer']" position="attributes">
                <attribute name="states">secretary_general</attribute>
            </xpath>
            <xpath expr="//header/field[@name='state']" position="replace">
                <field name="state" widget="statusbar"
                       statusbar_visible="draft,computed,confirmed,accounting_head_approval,sector_head_approval,secretary_general,transfered,close"/>
            </xpath>
        </field>
    </record>

    <record id="employee_promotions_custom_form_view_form" model="ir.ui.view">
        <field name="name">employee.promotions.form</field>
        <field name="model">employee.promotions</field>
        <field name="inherit_id" ref="exp_payroll_custom.employee_promotions_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_sector_head_approval" string="Sector Head Approval" type="object"
                        states="hr_manager" class="oe_highlight" groups="hr_trahum.group_sector_head_approval"/>
            </xpath>

            <xpath expr="//header" position="inside">
                <button name="action_secretary_general" string="Secretary General" type="object"
                        states="sector_head_approval" class="oe_highlight" groups="hr_trahum.group_secretary_general"/>
                <button string="Refused" name="act_refuse" states="sector_head_approval" type="object" class="oe_highlight"
                                groups="hr.group_hr_manager"/>
                 <button string="Refused" name="act_refuse" states="secretary_general" type="object" class="oe_highlight"
                                groups="hr.group_hr_manager"/>
            </xpath>

            <xpath expr="//button[@name='approved']" position="attributes">
                <attribute name="states">secretary_general</attribute>
            </xpath>
            <xpath expr="//header/field[@name='state']" position="replace">
                <field name="state" widget="statusbar"
                       statusbar_visible="draft,confirm,hr_manager,sector_head_approval,secretary_general,approved,refuse"/>
            </xpath>

        </field>
    </record>
        <record id="account.action_account_payments" model="ir.actions.act_window">
            <field name="name">Payment</field> <!-- تغيير الاسم إلى "Payment" -->
        </record>
    <record id="menu_action_account_payments_receivable" model="ir.ui.menu">
            <field name="name">payments</field>
        </record>

    <record id="employee_other_request_form_view_inherit" model="ir.ui.view">
    <field name="name">employee.other.request.form.view.inherit</field>
    <field name="model">employee.other.request</field>
    <field name="inherit_id" ref="employee_requests.employee_other_request_form_view"/>
   <field name="arch" type="xml">
        <xpath expr="//header/field[@name='state']" position="replace">
            <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approved,refuse"/>
        </xpath>

    </field>
</record>

    <record id="hr_contract_form_view" model="ir.ui.view">
        <field name="name">hr.contract.form.trahum</field>
        <field name="model">hr.contract</field>
        <field name="priority" eval="16"/>
        <field name="inherit_id" ref="hr_contract_custom.hr_contract_form_view"/>
        <field name="arch" type="xml">
            <field name="class_contract" position="after">
                <field name="delgiation_status_type" />
            </field>
        </field>
    </record>
</odoo>