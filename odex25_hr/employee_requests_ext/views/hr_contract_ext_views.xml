<odoo>
    <data>
        <!--inheriting hr_employee form view-->
        <record id="hr_contract_salary_ext_form_view" model="ir.ui.view">
            <field name="name">hr.contract.salary.ext.form.inherit</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='transport_allowance']" position="after">
                    <field name="field_allowance_custom"/>
                    <field name="other_allowance_custom"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>