<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_employee_identify_3">
        <t t-call="web.html_container" t-translation="off">
            <t t-foreach="docs" t-as="doc">
                <t t-call="hr_base.hr_layout">
                    <div class="report_box">
                        <style type="text/css">
                            @charset "UTF-8";
                            @font-face {
                            font-family: 'Somar';
                            src: url('/employee_requests/static/fonts/alfont_com_Somar-Regular.otf') format('truetype');
                            font-weight: 700;
                            font-style: normal;
                            }
                            .pt-5{
                            padding-top: 0rem !important;
                            font-family: "Somar", serif !important;
                            }
                            .backgroundsaip{
                            background-color: #006665;
                            color:#ffffff;
                            font-family: "Somar", serif !important;
                            font-size: 14px ;
                            }
                            .backgroundgrea{
                            background-color: #d9d9d9;
                            font-size: 10px ;
                            font-family: "Somar", serif !important;
                            }
                            .backgroundbule{
                            background-color: #34679a;
                            color:#ffffff;
                            font-family: "Somar", serif !important;
                            font-size: 14px ;

                            }
                            table, td ,tr {
                            font-family: "Somar", serif !important;
                            font-size: 14px ;
                            padding:0px;
                            }
                            .o_field_widget.o_priority .o_priority_star.fa-star {
                            color: gold;
                            }
                            .report_box{
                            padding: 0px;
                            font-family: "Somar", serif !important;
                            font-size: 14px ;
                            }
                            .o_report_layout_boxed table tbody tr td {
                            border-top: none;
                            border-left: 0px solid #495057;
                            }
                            .signature{

                            }
                            .o_report_layout_boxed table {
                            border: none;
                            }
                        </style>
                        <table style="width:100%;">
                            <tr>
                                <td style="text-align:right; width:50%;">
                                    <strong>التاريخ :</strong>
                                    <strong t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/>
                                </td>
                                <td style="text-align:left; width:50%;">
                                    <strong>Date :</strong>
                                    <strong t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/>
                                </td>
                            </tr>
                        </table>

                        <div class="">
                            <center>
                                <h5 style="font-weight: bold;">
                                    <span>خطاب تعريف راتب</span>
                                    <br/>
                                    <span>Salary Letter</span>
                                </h5>
                            </center>
                        </div>

                        <table cellpadding="2" cellspacing="2"
                               class="table table-borderless"
                               style="width:100%;border-collapse: collapse;border-collapse:separate;border-spacing: 0 10px;">
                            <tr style="border:0;">
                                <td class="text-left" style="width: 50%;height=50%;border:0;">
                                    <span style="border-bottom: 1px solid #333;">إلى:</span>
                                    <span style="font-weight: bold;" t-esc="doc.destination.name"/>
                                    <br/>
                                    <span>نحيطكم علما بأن الموظف</span>
                                    <span style="font-weight: bold;">
                                        <span t-esc="doc.employee_id.name"/>
                                    </span>
                                    <br/>
                                    <span>من العاملين لدى</span>
                                    <span style="font-weight: bold;">
                                        <span t-esc="env.user.company_id.name"/>
                                    </span>
                                    <br/>
                                    <span>المملكة العربية السعودية</span>
                                </td>
                                <td class="text-right" style="width: 50%;height=50%;border:0;">
                                    <span style="border-bottom: 1px solid #333;">To:</span>
                                     <span style="font-weight: bold;" t-esc="doc.destination_english"/>
                                    <br/>
                                    <span>This is to certify that</span>
                                    <span style="font-weight: bold;">
                                        <span t-esc="doc.employee_id.english_name"/>
                                    </span>
                                    <br/>
                                    <span>Is Employed By</span>
                                    <span style="font-weight: bold;">
                                        <span t-esc="env.user.company_id.english_name"/>
                                    </span>
                                    <br/>
                                    <span>Kingdom of Saudi Arabia</span>
                                    <!-- <span>This certification</span>
                                    <span>is issued</span>
                                    <span>upon the request of the employee without any obligation</span> -->
                                </td>
                            </tr>
                        </table>
                        <br/>
                        <table class="table table-sm" style="width: 100%;height=100%">
                            <tbody>
                                <tr>
                                    <td style="border: 1px solid #000" class="backgroundgrea text-left">
                                        <strong>تاريخ التعين</strong>
                                    </td>
                                    <td style="border: 1px solid #000" class="text-center">
                                        <span t-esc="doc.employee_id.contract_id.hiring_date"/>
                                    </td>
                                    <td style="border: 1px solid #000" class="text-center">
                                        <span t-esc="doc.employee_id.contract_id.hiring_date"/>
                                    </td>
                                    <td style="border: 1px solid #000" class="backgroundgrea text-right">
                                        <strong>Date of Hire</strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border: 1px solid #000" class="backgroundgrea text-left">
                                        <strong>المسمي الوظيفي</strong>
                                    </td>
                                    <td style="border: 1px solid #000" class="text-center">
                                        <span t-esc="doc.employee_id.job_id.name"/>
                                    </td>
                                    <td style="border: 1px solid #000" class="text-center">
                                        <span t-esc="doc.employee_id.job_id.english_name"/>
                                    </td>
                                    <td style="border: 1px solid #000" class="backgroundgrea text-right">
                                        <strong>Position</strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border: 1px solid #000" class="backgroundgrea text-left">
                                        <strong>رقم الهوية</strong>
                                    </td>
                                    <td style="border: 1px solid #000" class="text-center">
                                        <span t-esc="doc.employee_id.saudi_number.saudi_id or doc.employee_id.iqama_number.iqama_id"/>
                                    </td>
                                    <td style="border: 1px solid #000" class="text-center">
                                        <span t-esc="doc.employee_id.saudi_number.saudi_id or doc.employee_id.iqama_number.iqama_id"/>
                                    </td>
                                    <td style="border: 1px solid #000" class="backgroundgrea text-right">
                                        <strong>ID Number</strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border: 1px solid #000" class="backgroundgrea text-left">
                                        <strong>الجنسية</strong>
                                    </td>
                                    <td style="border: 1px solid #000" class="text-center">
                                        <span t-esc="doc.employee_id.country_id.name"/>
                                    </td>
                                    <td style="border: 1px solid #000" class="text-center">
                                        <span t-esc="doc.employee_id.country_id.name"/>
                                    </td>
                                    <td style="border: 1px solid #000" class="backgroundgrea text-right">
                                        <strong>Nationality</strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <br/>
                        <br/>

                        <table cellpadding="2" cellspacing="2" class="table table-borderless"
                               style="width:100%;border-collapse: collapse;border-collapse:separate;border-spacing: 0 10px;">
                            <tbody>
                                <tr style="border: 0">
                                    <td style="border: 0">
                                        <span>تم إصدار هذه الشهادة دون أدني مسؤولية على اللجنة الوطنية لرعاية السجناءوالمفرج عنهم وأسرهم -تراحم</span>
                                    </td>
                                    <td class="text-right" style="border: 0">
                                        <span>This certificate was issued to the employee with no responsibility on Committee for the Care of Prisoners, Released Prisoners and Their Families -Trahum</span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <br/>
                        <br/>

                        <table cellpadding="2" cellspacing="2" class="table table-borderless"
                               style="width:100%;border-collapse: collapse;border-collapse:separate;border-spacing: 0 10px;">
                            <tbody>
                                <tr style="border: 0">
                                    <td style="width: 33%;height=33%;border: 0">
                                        <center>
                                            <br/>
                                            <div class="justify-content: center !important;padding:0px;">
                                                <img class="img" style="width: 50%;"
                                                     src="/employee_requests/static/image/img.png"/>
                                            </div>

                                        </center>
                                    </td>
                                    <td style="width: 33%;height=33%;border: 0">
                                        <center>
                                            <div class="signature"
                                                 style="justify-content: center !important;padding:0px;">
                                                <strong>إدارة رأس المال البشري</strong>
                                                <br/>
                                                <br/>
                                                <t t-if="env.user.company_id.hr_manager_id.user_id.sign_signature">
                                                    <img t-att-src="image_data_uri(env.user.company_id.hr_manager_id.user_id.sign_signature)"
                                                         style="width:200px; height:120px; !important"/>
                                                </t>
                                                <t t-else="">
                                                    <p>لايوجد توقيع لهذا المستخدم</p>
                                                </t>
                                            </div>
                                        </center>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>


    </template>

    <record id="action_report_employee_identify_3" model="ir.actions.report">
        <field name="model">employee.other.request</field>
        <field name="name">Employee Identify Without Payroll</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">employee_requests.report_employee_identify_3</field>
        <field name="report_file">employee_requests.report_employee_identify_3</field>
        <field name="groups_id" eval="[(4, ref('hr.group_hr_user'))]"/>

    </record>
</odoo>
