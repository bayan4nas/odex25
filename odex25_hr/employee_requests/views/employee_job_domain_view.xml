<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_employee_job_domain_tree" model="ir.ui.view">
        <field name="name">employee.job.domain.tree</field>
        <field name="model">employee.job.domain</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_employee_job_domain_form" model="ir.ui.view">
        <field name="name">employee.job.domain.form</field>
        <field name="model">employee.job.domain</field>
        <field name="arch" type="xml">
            <form string="Job Domain">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_employee_job_domain" model="ir.actions.act_window">
        <field name="name">Job Domains</field>
        <field name="res_model">employee.job.domain</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Manage job fields / domains for employees.
            </p>
        </field>
    </record>

    <menuitem id="menu_employee_job_domain"
              name="Job Domains"
              parent="hr.hr_menu_configuration"
              action="action_employee_job_domain"
              groups="exp_hr_payroll.group_hr_payroll_user"
              sequence="30"/>
</odoo>
