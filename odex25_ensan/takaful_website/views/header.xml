<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="frontend_layout" name="Main Frontend Layout" inherit_id="web.frontend_layout">
        <xpath expr="//div[@id='wrapwrap']/header/nav" position="replace">
            <div class="navbar-container">
                <div class="logo">
                    <a href="/" class="navbar-brand">
                        <img src="/takaful_website/static/src/img/ensan-logo-white.png" alt=""/>
                    </a>
                </div>
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a href="/">Home</a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true">About Ensan</a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="/about#who_are_we">Who are we ?</a>
                            </li>
                            <span class="dropdown-items-divider"></span>
                            <li>
                                <a href="/about#objectives">Our Objectives</a>
                            </li>
                            <span class="dropdown-items-divider"></span>
                            <li>
                                <a href="/about#ambitions">Our Ambitions</a>
                            </li>
                            <span class="dropdown-items-divider"></span>
                            <li>
                                <a href="/about#adminstrative_structure">Administrative Structure</a>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true">التبرع</a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="/zakat">زكاة المال</a>
                            </li>
                            <span class="dropdown-items-divider"></span>
                            <li>
                                <a href="/food_basket">زكاة الاضاحي</a>
                            </li>
                            <span class="dropdown-items-divider"></span>
                            <li>
                                <a href="/applications">الأثاث و الاجهزة</a>
                            </li>
                            <span class="dropdown-items-divider"></span>
                            <li>
                                <a href="/families_loan">الاسر المنتجة</a>
                            </li>
                        </ul>
                    </li>
                    <!-- <li class="dropdown" t-if="request.env.user.partner_id.account_type=='benefit'"> -->
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true">المستفيدين</a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="/food_remain">فائض الطعام</a>
                            </li>
                            <span class="dropdown-items-divider"></span>
                            <li>
                                <a href="/clubs">النوادى</a>
                            </li>
                            <span class="dropdown-items-divider"></span>
                            <li>
                                <a href="/urgent_needs">الاحتياجات الطارئة</a>
                            </li>
                        </ul>
                    </li>
                    <!-- <li class="dropdown" t-if="request.env.user.partner_id.account_type=='sponsor'"> -->
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true">الكافل</a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="/guarantees">كفالاتي</a>
                            </li>
                            <span class="dropdown-items-divider"></span>
                            <li>
                                <a href="/notifications">الاشعارات</a>
                            </li>
                            <span class="dropdown-items-divider"></span>
                            <li>
                                <a href="/notifications_settings">اعدادات الاشعارات</a>
                            </li>
                            <span class="dropdown-items-divider"></span>
                            <li>
                                <a href="/certificates_settings">اعدادات الشهادات</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="/contactus">Contact us</a>
                    </li>
                </ul>
                <div class="lang-container">
                    <t t-call="website.language_selector_inline"/>
                </div>
                <div class="signin">
                    <!-- Sign In -->
                    <t t-call="portal.placeholder_user_sign_in">
                        <t t-set="_item_class" t-value="'nav-item ml-lg-auto'"/>
                        <t t-set="_link_class" t-value="'nav-link font-weight-bold'"/>
                    </t>
                    <!-- User Dropdown -->
                    <t class="user-dropdown-options" t-call="portal.user_dropdown">
                        <t t-set="_user_name" t-value="true"/>
                        <t t-set="_item_class" t-value="'nav-item dropdown ml-lg-auto'"/>
                        <t t-set="_link_class" t-value="'nav-link font-weight-bold'"/>
                    </t>
                </div>
            </div>
        </xpath>
    </template>

