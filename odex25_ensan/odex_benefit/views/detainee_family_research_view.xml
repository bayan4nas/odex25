<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="detainee_family_research_tree_view" model="ir.ui.view">
            <field name="name">detainee.family.research.tree</field>
            <field name="model">detainee.family.research</field>
            <field name="arch" type="xml">
                <tree string="فريق بحث (أسرة النزيل)">
                <field name="benefit_id"/>
                <field name="detainee_id"/>
                <field name="breadwinner_name"/>
                <field name="breadwinner_id_number"/>
<!--                <field name="relation_id"/>-->
                <field name="benefit_member_count"/>
                <field name="detainee_name"/>
                <field name="housing_type"/>
                <field name="property_type"/>
                <field name="housing_status"/>
                <field name="is_employee"/>
                <field name="experience_years"/>
                <field name="experience_unit"/>
                <field name="create_date"/>
            </tree>
            </field>
        </record>
        <record id="detainee_family_research_view_form" model="ir.ui.view">
            <field name="name">detainee_family_research_view_form</field>
            <field name="model">detainee.family.research</field>
            <field name="arch" type="xml">
                <form string="detainee_family_research_form">
                    <sheet>
                            <group>
                        <group string="الأسرة">
                            <field name="benefit_id"/>
                            <field name="breadwinner_name" readonly="1"/>
                            <field name="breadwinner_id_number" readonly="1"/>
<!--                            <field name="relation_id" readonly="1"/>-->
                            <field name="benefit_member_count" readonly="1"/>
                        </group>

                    </group>

                    <group string="السكن">
                        <field name="housing_type" readonly="1"/>
                        <field name="property_type" readonly="1"/>
                        <field name="housing_status"/>
                    </group>

                    <group string="العمل والتعليم">
                        <field name="specialization"/>
                        <field name="is_employee"/>
                        <field name="experience_years"/>
                        <field name="experience_unit"/>
                    </group>

                    <group string="تقرير الباحث">
                        <field name="researcher_report" nolabel="1"/>
                    </group>

                    <group string="المسؤولين">
                        <field name="researcher_id"/>
                        <field name="researcher_signature"/>
                        <field name="specialist_name"/>
                        <field name="specialist_signature"/>
                        <field name="benefit_service_manager_name"/>
                        <field name="benefit_service_manager_signature"/>
                        <field name="ceo_name"/>
                        <field name="ceo_signature"/>
                    </group>

                    <group>
                        <field name="create_date" readonly="1"/>
                    </group>

                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>