<odoo>
    <data>
        <record id="main_service_form" model="ir.ui.view">
            <field name="name">main.service.form</field>
            <field name="model">main.service</field>
            <field name="arch" type="xml">
                <form string="Main Service">
                    <sheet>
                        <group>
                             <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="service_type"/>
                                <field name="services" attrs="{'invisible': [('service_type', '=', 'exception')]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="main_service_tree" model="ir.ui.view">
            <field name="name">main.service.tree</field>
            <field name="model">main.service</field>
            <field name="arch" type="xml">
                <tree string="Service Types">
                    <field name="name"/>
                    <field name="service_type"/>
                    <field name="services"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
