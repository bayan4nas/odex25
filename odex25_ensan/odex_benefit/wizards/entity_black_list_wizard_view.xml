<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_entity_black_list_wizard_form" model="ir.ui.view">
            <field name="name">view.entity.black.list.wizard.form</field>
            <field name="model">entity.black.list.wizard</field>
            <field name="arch" type="xml">
                <form string="Black list wizard">
                    <sheet>
                        <group>
                            <field name="entity_id" invisible="1"/>
                            <field name="black_list_reason"/>
                            <field name="black_list_message"/>
                        </group>

                        <footer>
                            <button name="create_action" type="object" string="To Black List" class="oe_highlight"/>
                            or
                            <button special="cancel" string="Cancel"/>
                        </footer>
                    </sheet>
                </form>

            </field>
        </record>
    </data>
</openerp>