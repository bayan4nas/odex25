<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>
		<record model="ir.ui.view" id="sponsor_report_menu_form">
			<field name="name">benefit.report.form</field>
			<field name="model">benefit.wiz</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group col="4" colspan="2">
							<field name="date_from" />
							<field name="date_to" />
							<field name="benefit_ids" widget="many2many_tags" />
							<field name="report_type" invisible="1"/>
						</group>

					</sheet>
					<footer>
						<button name="print_report" string="Print PDF" type="object" class="oe_highlight"/>
						<button string="Cancel" class="oe_link" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>

		<record id="sponsor_report_menu_action" model="ir.actions.act_window">
			<field name="name">Benefits Payments Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">benefit.wiz</field>
<!--			<field name="view_type">form</field>-->
			<field name="view_mode">form</field>
			<field name="context">{'default_report_type':'benefit'}</field>
			<field name="target">new</field>
		</record>

		<record id="benefit_month_report_action" model="ir.actions.act_window">
			<field name="name">Benefits Month Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">benefit.wiz</field>
<!--			<field name="view_type">form</field>-->
			<field name="view_mode">form</field>
			<field name="context">{'default_report_type':'benefit_month'}</field>
			<field name="target">new</field>
		</record>

	</data>

</odoo>