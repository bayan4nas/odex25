<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="menu_website_paying_card_id" model="website.menu">
        <field name="name">Creditcard Paying</field>
        <field name="url">/dashboard/payment/paycard</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">20</field>
        <field name="website_id" ref="website.default_website"/>
    </record>

    <record id="menu_website_bank_transfer_id" model="website.menu">
        <field name="name">Bank Transfer</field>
        <field name="url">/dashboard/payment/banktransfer</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">21</field>
        <field name="website_id" ref="website.default_website"/>
    </record>

    <template id="paying_card" name="Paying With Creditcard">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">

            <div class="col-lg-12 mt-5 paying-creditcard">
                <div class="shadow-lg p-3 card">
                    <div class="card-body">

                        <div class="col-12 payment-details">
                            <div class="statistics-box input-group m-1 mt-3 d-flex justify-content-center"
                                 t-if="description">
                                <div class="statistics-box-inner">
                                    <strong>
                                        Service Name :
                                    </strong>
                                    <span t-esc="description"/>
                                </div>
                            </div>

                            <div class="statistics-box input-group m-1 mt-3 d-flex justify-content-center"
                                 t-if="required_payment or tax_amount">
                                <div class="statistics-box-inner">
                                    <strong>
                                        Service Price :
                                    </strong>
                                    <span t-esc="required_payment"/>
                                    <span> SAR</span>
                                </div>
                            </div>
                            <div class="statistics-box input-group m-1 mt-3 d-flex justify-content-center"
                                 t-if="required_payment or tax_amount">
                                <div class="statistics-box-inner">
                                    <strong>Tax Amount :</strong>
                                    <span t-esc="tax_amount"/> 
                                    <span> SAR</span>
                                </div>
                            </div>
                            <div class="statistics-box input-group m-1 mt-3 d-flex justify-content-center"
                                 t-if="required_payment or tax_amount">
                                <div class="statistics-box-inner">
                                    <strong>Total Required :</strong>
                                    <span t-esc="total_needed"/>
                                    <span> SAR</span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- GOOO -->
                        <div class="row payment-form">
                            <div class="panel panel-default">
                                
                                <div class="payment-methods">
                                    <div class="payment-methods-img">
                                        <img src="/takaful_rest_api/static/src/img/creditcardicons.png"/>
                                    </div>
                                </div>
                              
                                <!-- /dashboard/payment/feedback -->
                                <form accept-charset="UTF-8"
                                      action="https://api.moyasar.com/v1/payments.html" method="POST" id="change_viza_value">
                                    <input name="callback_url" type="hidden" t-att-value="callback_url"/>
                                    <input name="publishable_api_key" type="hidden"
                                           t-att-value="moyaser_token"/>
                                    <input name="amount" type="hidden"
                                           t-att-value="amount"/>
                                    <input name="currency" type="hidden" value="SAR"/>
                                    <input name="source[type]" type="hidden" value="creditcard"/>
                                    <input name="description" type="hidden" t-att-value="description" />
                                    <input name="metadata[meta]" type="hidden" t-att-value="metadata_dict"/>
                                    <input type="hidden" name="source[3ds]" value="true"/>
                                    <input type="hidden" class="form-control" name="redirect"
                                           t-att-value="redirect" placeholder="XXXXXXX"/>
                                    <div class="panel-body">
                                        <div class="card-number">
                                            <div class="form-group">
                                                <label>CARD NUMBER</label>
                                                <div class="input-group">
                                                    <input type="tel" autocomplete="off" id="credit_card_number"
                                                            required="1"
                                                            name="source[number]" class="form-control"
                                                            placeholder="Valid Card Number"/>
                                                    <div class="input-group-append">
                                                        <span class="input-group-text"><i class="fa fa-credit-card"></i></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="expiration-date">
                                            <div class="form-group">
                                                <label>
                                                    <span class="hidden-xs">EXPIRATION</span>
                                                    <span class="visible-xs-inline">EXP</span>
                                                    DATE
                                                </label>
                                                <div class="date_year">
                                                    <div class="credit-card-month">
                                                        <input type="tel" id="credit_card_month" name="source[month]" required="1" class="form-control" placeholder="05"/>
                                                    </div>
                                                    <div class="credit-card-year">
                                                        <input type="tel" id="credit_card_year" name="source[year]" required="1" class="form-control" placeholder="2024"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>CV CODE</label>
                                                <input type="tel" autocomplete="off" id="credit_card_cvc" required="1"
                                                        name="source[cvc]" class="form-control" placeholder="CVC"/>
                                            </div>
                                        </div>
                                        <div class="card-owner">
                                            <div class="form-group">
                                                <label>CARD OWNER</label>
                                                <input type="text" id="credit_card_name" name="source[name]"
                                                        required="1"
                                                        class="form-control" placeholder="Card Owner Names"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="panel-footer">
                                        <div class="row">
                                            <div class="col-md-12 text-center">
                                                <button id="load" class="btn btn-lg btn-success btn-sm btn-submit"
                                                        data-loading-text="&lt;i class='fa fa-spinner fa-spin '> &lt;/i>">
                                                   Pay Now
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                    <!-- End ooo -->

                    </div>
                </div>
            </div>

        </div>
    </t>
</template>


<!-- For Bank Transfer -->
<template id="bank_transfer" name="Make Bank Transfer">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">

            <div class="col-lg-12 mt-5">
                <div class="shadow-lg p-3 card">
                    <div class="card-body">

                        <div class="col-12 mt-5">
                            <div class="col-12 mt-5">
                            <div class="row input-group m-1 mt-3 d-flex justify-content-center"
                                 t-if="description">
                                <div class="col-xs-4">
                                    <strong>
                                        Service Name :
                                    </strong>
                                    <span t-esc="description"/>
                                </div>
                            </div>

                            <div class="row input-group m-1 mt-3 d-flex justify-content-center"
                                 t-if="required_payment or tax_amount">
                                <div class="col-xs-4">
                                    <strong>
                                        Service Price :
                                    </strong>
                                    <span t-esc="required_payment"/>
                                    <span> SAR</span>
                                </div>
                            </div>
                            <div class="row input-group m-1 mt-3 d-flex justify-content-center"
                                 t-if="required_payment or tax_amount">
                                <div class="col-xs-4">
                                    <strong>Tax Amount :</strong>
                                    <span t-esc="tax_amount"/> 
                                    <span> SAR</span>
                                </div>
                            </div>
                            <div class="row input-group m-1 mt-3 d-flex justify-content-center"
                                 t-if="required_payment or tax_amount">
                                <div class="col-xs-4">
                                    <strong>Total Required :</strong>
                                    <span t-esc="total_needed"/>
                                    <span> SAR</span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Bank Payment -->
                        <div class="col-12 mt-5">
                            <div class="card  min-height-320  m-auto">
                                <div class="card-body">
                                    <form class="row mr-0 ml-0" action="/dashboard/payment/transfer"
                                          method="post" enctype="multipart/form-data">
                                        <input type="hidden" name="csrf_token"
                                               t-att-value="request.csrf_token()"/>
                                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                            <h5 class="mb-4 mt-1">Your information</h5>
                                            <div class="form-group">
                                                <label for="example-email-input"
                                                       class="col-form-label">Name
                                                </label>
                                                <input class="form-control" type="text" name="name"
                                                       required="required"
                                                       t-att-value="user.name" readonly="readonly"/>
                                            </div>
                                            <div class="form-group">
                                                <label for="example-url-input"
                                                       class="col-form-label">BANK ACCOUNT OWNER NAME
                                                </label>
                                                <input class="form-control" type="text" name="name_of"
                                                       required="required"
                                                       value="" id="example-url-input"/>
                                            </div>
                                            <div class="form-group">
                                                <label for="example-tel-input"
                                                       class="col-form-label">AMOUNT
                                                </label>
                                                <input class="form-control" type="text" name="amount"
                                                       id="Nmb" placeholder="" required="required"/>
                                            </div>
                                            <div class="form-group">
                                                <label for="transfer_date" class="col-form-label">Date</label>
                                                <input class="form-control" required="required"
                                                       name="transfer_date" type="date"
                                                       t-att-value="datetime.datetime.now().date()"
                                                       id="transfer_date"/>
                                            </div>

                                            <div class="input-group mb-3 mt-5">
                                                <div class="custom-file">
                                                    <input type="file"
                                                           class="custom-file-input file-upload-field"
                                                           name="attachment"
                                                           id="inputGroupFile02" required="required"/>
                                                    <label class="custom-file-label file-upload-wrapper"
                                                           for="inputGroupFile02">Transfer receipt
                                                    </label>
                                                </div>
                                            </div>

                                            <div class="input-group m-5 d-flex justify-content-center">
                                                <div class="">
                                                    <button
                                                            class="btn btn-success btn-sm btn-submit">Submit
                                                    </button>
                                                </div>
                                            </div>

                                        </div>
                                    </form>

                                    <div class="row">
                                            <div class="col-md-12 text-center bottom-info-tfs">
                                                <p class="bottom-info-tfs">
                                                    <h2>Our Bank Accounts</h2>
                                                    <t t-foreach="bank_accounts" t-as="bank">
                                                        <div class="table-responsive">
                                            <table class="table">
                                                <tr>
                                                    <td style="border-top: none;">
                                                        <img style="width: 50px;" class="image"
                                                             t-att-src="'data:image/png;base64,%s' % to_text(bank.bank_img)"/>
                                                    </td>
                                                    <td style="border-top: none;">
                                                        <t t-esc="bank.bank_id.iban"/>
                                                    </td>
                                                    <td style="border-top: none;">IBAN</td>
                                                    <td style="border-top: none;">
                                                        <t t-esc="bank.currency_id.name"/>
                                                    </td>
                                                    <td style="border-top: none;">
                                                        <t t-esc="bank.acc_number"/>
                                                    </td>
                                                    <td style="border-top: none;">
                                                        <t t-esc="bank.bank_id.name"/>
                                                    </td>
                                                </tr>
                                            </table>
                                                        </div>
                                                    </t>
                                                </p>
                                            </div>
                                        </div>
                                        <!-- End Our banks -->
                                </div>
                            </div>
                        </div>

                </div>

            </div>

        </div>
    </div>
    </div>
    </t>
</template>


<!-- For Bank Transfer  success_operation -->
<template id="success_operation" name="Operation Success">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">

            <div class="col-12 mt-5">
                    <div class="card card-bordered max-width-480 min-height-320 m-auto">
                        <div class="card-body m-auto">
                            <div class="border-top my-3"></div>
                            <div class="row m-2 p-1 text-center" >
                                <div class="row ml-2">
                                    <h3>Bank Transfer</h3>
                                </div>
                                <p> Thank you for submitting your transfer Documents, our team will get right on  it!, your transfer number <t t-esc="message"/></p>
                                <div class="w-100 text-center">
                                <t t-if="status">
                                    <i class="mt-3 fa fa-check-circle-o fa-6x text-success"></i>                                    
                                </t>
                                <t t-else="">
                                    <i class="mt-3 fa fa-times-circle-o fa-6x text-danger"></i>
                                </t>
                                </div>
                            </div>
                            <div class="col-md-12 text-center link-message">
                                <a class="btn btn-info" href="/dashboard/payment/banktransfer">
                                    <span>Return Back</span>
                                    <i class="fa fa-arrow-right"/>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </t>
</template>
</odoo>