<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_empowerment" model="ir.module.category">
        <field name="name">Empowerment Management</field>
        <field name="sequence">30</field>
    </record>
    <record id="group_empowerment_user" model="res.groups">
        <field name="name">Empowerment User</field>
        <field name="category_id" ref="odex_empowerment.module_category_empowerment"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
    <record id="group_empowerment_manager" model="res.groups">
        <field name="name">Empowerment Manager</field>
        <field name="category_id" ref="odex_empowerment.module_category_empowerment"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>

