<odoo>
    <data noupdate="0">
        <record id="module_category_kufula_base" model="ir.module.category">
            <field name="name">Kufula System Configruation</field>
            <field name="description">Helps you manage configruations for Kufula System</field>
            <field name="sequence">2</field>
        </record>

        <record id="group_kufula_config_officer" model="res.groups">
            <field name="name">Officer</field>
            <field name="category_id" ref="module_category_kufula_base"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_kufula_conf_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_category_kufula_base"/>
            <field name="implied_ids" eval="[(4, ref('group_kufula_config_officer'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

    </data>
</odoo>
