<?xml version="1.0" encoding="utf-8"?>
<!-- This added for Takaful settings -->
<odoo>
    <record id="takaful_settings_view2" model="ir.ui.view">
        <field name="name">takaful.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Kafalat System" string="Kafalat System" data-key="odex_takaful_base">

                    <h2>Kafaleen System</h2>
                    <!-- For Row 1 -->
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 o_setting_box">
                            <div class="col-md-12">
                                
                                <div class="content-group mt16">
                                    <label for="min_kafala"/>
                                    <field name="min_kafala" class="text-center oe_inline" style="margin-right:50px;" />
                                    <span class="text-muted"> Riyal</span>
                                </div>

                                <div class="content-group mt16">
                                    <label for="cancel_kafala"/>
                                    <field name="cancel_kafala" class="text-center oe_inline" style="margin-right:50px;"/>
                                    <span class="text-muted"> Day</span>
                                </div>

                                <div class="content-group mt16">
                                    <label for="new_kafala" class="oe_inline"/>
                                    <field name="new_kafala" class="oe_inline" style="margin-right:50px;"/>   
                                </div>

                                <div class="content-group mt16">
                                    <label for="kafala_journal_id"/>
                                    <field name="kafala_journal_id" class="text-center oe_inline" style="margin-right:50px;" domain="[('type','=','sale')]"/>
                                </div>

                                <div class="content-group mt16">
                                    <label for="allowed_pay_days"/>
                                    <field name="allowed_pay_days" class="text-center oe_inline" style="margin-right:50px;"/>
                                    <span class="text-muted"> Day</span>
                                </div>

                           </div>
                           <!-- End Row 1-->
                           <group>
                               <div class="col-md-12">
                                    <notebook>
                                        <page string="Notifications" name="notification">
                                            <field name="notification_ids" widget="many2many" nolabel="1">
                                                <tree>
                                                    <field name="duration" style="padding-right:50px;"/> 
                                                    <field name="notification_type"/>
                                                    <field name="message_type_ids" widget="many2many_tags"/>
                                                </tree>
                                            </field>
                                        </page>
                                    </notebook>
                               </div>
                           </group>
                        </div>
                        <!-- End  Row 2-->
                    </div>  
                    <!-- End settings container -->

                    <h2>Kafalat Income/Revenue Accounts</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="orphan_account_id"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="orphan_account_id" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="widow_account_id"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="widow_account_id" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="gift_account_id"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="gift_account_id" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="need_account_id"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="need_account_id" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Account settings -->

                    <h2>Benefit Monthly Payments</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="kafala_benefit_account_id"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="kafala_benefit_account_id" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="kafala_benefit_bank_account_id"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="kafala_benefit_bank_account_id" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="kafala_benefit_journal_id"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="kafala_benefit_journal_id" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Month Payment -->

                </div>
            </xpath>
        </field>
    </record>

    <record id="takaful_settings_action" model="ir.actions.act_window">
        <field name="name">kafalat.system.takaful.settings.action</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="takaful_settings_view2"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'odex_takaful_base'}</field>
    </record>

    <menuitem id="takaful_settings_menu" name="Settings"
            parent="takaful_app_top_menu" action="takaful_settings_action" sequence="50"/>
</odoo>