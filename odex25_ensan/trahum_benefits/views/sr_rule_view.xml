<odoo>
    <!-- Tree view -->
    <record id="view_sr_rule_tree" model="ir.ui.view">
        <field name="name">sr.rule.tree</field>
        <field name="model">sr.rule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="rule_type"/>
                <field name="scope"/>
                <field name="metric"/>
                <field name="operator"/>
                <field name="threshold_value"/>
                <field name="period"/>
                <field name="active"/>
                <field name="severity"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="sr_rule_form_view" model="ir.ui.view">
        <field name="name">sr.rule.form</field>
        <field name="model">sr.rule</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="severity"/>
                            <field name="message" string="Violation Message"/>
                        </group>
                    </group>

                    <hr/>

                    <group string="Rule Configuration">
                        <group>
                            <field name="metric"/>
                            <field name="allowed_need_categories"
                                   widget="many2many_tags"
                                   string="تصنيف الاحتياج المطلوب"/>

                            <field name="member_value" attrs="{'invisible': [('metric', '!=', 'family_value')]}"/>
                            <field name="breadwinner_value" attrs="{'invisible': [('metric', '!=', 'family_value')]}"/>
                        </group>

                        <group>
                            <field name="operator" attrs="{'invisible': [('metric', 'in', ['family_value', 'housing_support_rule'])]}"/>
                            <field name="threshold_value" attrs="{'invisible': [('metric', 'in', ['family_value', 'housing_support_rule'])]}"/>

                            <field name="numeric_value" string="Tolerance Ratio %"
                                   attrs="{'invisible': [('metric', '!=', 'tolerance_ratio')], 'required': [('metric', '=', 'tolerance_ratio')]}"/>
                        </group>
                    </group>

                    <group string="Period Configuration"
                           attrs="{'invisible': [('metric', 'not in', ['sum_amount_period', 'count_requests_period', 'service_repetition'])]}">
                        <group>
                            <field name="period"/>
                        </group>
                        <group>
                            <field name="date_from"
                                   attrs="{'invisible': [('period', '!=', 'custom')], 'required': [('period', '=', 'custom')]}"/>
                            <field name="date_to"
                                   attrs="{'invisible': [('period', '!=', 'custom')], 'required': [('period', '=', 'custom')]}"/>
                        </group>
                    </group>

                    <group string="Housing Support Settings" attrs="{'invisible': [('metric', '!=', 'housing_support_rule')]}">
                        <group>
                            <field name="housing_property_type"/>
                            <field name="one_time_support"/>
                        </group>
                    </group>

                    <group string="First Condition: Rental Duration Comparison"
                           attrs="{'invisible': [('metric', '!=', 'housing_support_rule')]}">
                        <group>
                            <field name="rent_duration_years"/>
                            <field name="rent_duration_months"/>
                        </group>
                        <group>
                            <field name="duration_operator"/>
                        </group>

                    </group>

                    <group string="Second Condition: Service Amount Comparison"
                           attrs="{'invisible': [('metric', '!=', 'housing_support_rule')]}">
                        <group>
                            <field name="max_service_amount"/>
                            <field name="amount_operator"/>
                        </group>
                        <group colspan="4">
                            <field name="amount_violation_message" placeholder="Enter service amount violation message"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>


    <!-- Action -->
    <record id="action_sr_rule" model="ir.actions.act_window">
        <field name="name">Services Request Rule</field>
        <field name="res_model">sr.rule</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add new categories for family needs.
            </p>
        </field>
    </record>

            <menuitem id="menu_sr_rule"  name="Services Request Rule"
                parent="odex_benefit.benefit_services" action="action_sr_rule" sequence="20"/>
</odoo>
