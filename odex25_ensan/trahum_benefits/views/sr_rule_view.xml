<odoo>
    <!-- Tree view -->
    <record id="view_sr_rule_tree" model="ir.ui.view">
        <field name="name">sr.rule.tree</field>
        <field name="model">sr.rule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="rule_type"/>
                <field name="scope"/>
                <field name="metric"/>
                <field name="operator"/>
                <field name="threshold_value"/>
                <field name="period"/>
                <field name="active"/>
                <field name="severity"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_sr_rule_form" model="ir.ui.view">
        <field name="name">sr.rule.form</field>
        <field name="model">sr.rule</field>
        <field name="arch" type="xml">
            <form string="Services Request Rule">
                                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Rule Name"/>
                        </h1>
                    </div>

                    <group>
                        <field name="active"/>
                        <field name="sequence"/>
                        <field name="severity"/>
                    </group>

                    <notebook>
                        <page string="عام">
                            <group>
                                <field name="metric"/>
                                <field name="operator"/>
                                <field name="threshold_value"/>
                                <field name="breadwinner_value" attrs="{'invisible':[('metric','!=','family_value')]}"/>
                                <field name="member_value" attrs="{'invisible':[('metric','!=','family_value')]}"/>
                                <field name="numeric_value" attrs="{'invisible':[('metric','!=','tolerance_ratio')]}" widget="percentage"/>

                            </group>
                            <group>
                                <field name="period"/>
                            </group>
                        </page>



                        <page string="Violation of Condition Message">
                            <field name="message" placeholder="Message when the rule is violated"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sr_rule" model="ir.actions.act_window">
        <field name="name">Services Request Rule</field>
        <field name="res_model">sr.rule</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add new categories for family needs.
            </p>
        </field>
    </record>

            <menuitem id="menu_sr_rule"  name="Services Request Rule"
                parent="odex_benefit.benefit_services" action="action_sr_rule" sequence="20"/>
</odoo>
