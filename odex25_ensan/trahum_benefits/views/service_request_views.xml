    <record id="service_request_form_inherit" model="ir.ui.view">
        <field name="name">service.request.form.inherit</field>
        <field name="model">service.request</field>
        <field name="inherit_id" ref="odex_benefit.service_request_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='need_status_id']" position="after">
                <field name="service_cats"
                       attrs="{'readonly':[('state','not in',['draft','researcher','send_request'])]}"
                       required="0"/>
                <field name="service_path"/>
                <field name="sub_service_path"/>
                <field name="account_expense"/>


            </xpath>
        </field>
    </record>


</odoo>