<odoo>
    <data>
        <record id="view_family_member_tree" model="ir.ui.view">
            <field name="name">family.member.tree</field>
            <field name="model">family.member</field>
            <field name="arch" type="xml">
                <tree string="Members">
                    <field name="name"/>
                    <field name="member_id_number"/>
                    <field name="member_phone"/>
                    <field name="benefit_type"/>
                </tree>
            </field>
        </record>

        <record id="view_family_member_form" model="ir.ui.view">
            <field name="name">family.member.form</field>
            <field name="model">family.member</field>
            <field name="arch" type="xml">
                <form string="Members">
                    <sheet>
                        <group>
                            <group>
                                <h1>
                                    <label for="name" string="Name"/>
                                    <field name="name" readonly="1"/>
                                </h1>
                                <br/>
                                <h3>
                                    <label for="first_name" string="First Name"/>
                                    <field name="first_name" required="1" class="update_full_name"/>
                                </h3>
                                <h3>
                                    <label for="father_name" string="Father Name"/>
                                    <field name="father_name" required="1" class="update_full_name"/>
                                </h3>
                                <h3>
                                    <label for="grand_name" string="Grand Name"/>
                                    <field name="grand_name" required="1" class="update_full_name"/>
                                </h3>
                                <h3>
                                    <label for="family_name" string="Family Name"/>
                                    <field name="family_name" required="1" class="update_full_name"/>
                                </h3>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="benefit_type"/>
                                <field name="inmate_status" attrs="{'invisible': [('benefit_type', '!=', 'inmate')]}"/>
                                <field name="prison_id" attrs="{'invisible': [('benefit_type', '!=', 'inmate')]}"/>
                                <field name="entitlement_status"
                                       attrs="{'invisible': [('benefit_type', 'not in', ['breadwinner', 'member'])]}"/>
                                <field name="released_status"
                                       attrs="{'invisible': [('benefit_type', '!=', 'released')]}"/>
                                <field name="code" readonly="1"/>
                            </group>
                            <group>
                                <field name="benefit_id"
                                       string="Family Profile"/>
                                <field name="prison_country_id"
                                       attrs="{'invisible': [('benefit_type', '!=', 'inmate')]}"/>

                            </group>
                        </group>
                        <notebook>
                            <page string="Personal Details">
                                <group>
                                    <group>
                                        <field name="member_id_number"/>
                                        <field name="identity_proof_id"/>
                                        <field name="birth_date"/>
                                        <field name="gender"/>
                                        <field name="qualification_id"/>
                                        <field name="nationality_id"/>
                                    </group>
                                    <group>
                                        <field name="member_phone"/>
                                        <field name="additional_mobile_number"/>
                                        <field name="work_type_id"/>
                                        <field name="birth_place"/>
                                        <field name="relation_id"/>
                                        <field name="marital_status_id"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Education History">
                                <field name="education_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="identity_number"/>
                                        <field name="level_id"/>
                                        <field name="school_name"/>
                                        <field name="path" string="Path"/>
                                        <field name="education_department_id"/>
                                        <field name="grade" string="Grade"/>
                                        <field name="graduation_year"/>
                                        <field name="attachments"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="National Address">
                                <group>
                                    <field name="building_number"/>
                                    <field name="sub_number"/>
                                    <field name="additional_number"/>
                                    <field name="street_name"/>
                                    <field name="district"/>
                                    <field name="city"/>
                                    <field name="postal_code"/>
                                </group>
                            </page>
                            <page string="Comprehensive Rehabilitation">
                                <field name="rehabilitation_ids">
                                    <tree>
                                        <field name="income_value"/>
                                        <field name="disability_type_id"/>
                                        <field name="disability_date"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Health Data">
                                <group>
                                    <group>
                                        <field name="blood_type"/>
                                    </group>
                                </group>
                                <group>
                                    <!-- Hereditary Disease -->
                                    <div class="o_row">
                                        <label for="has_hereditary_disease" string="Hereditary Disease" class="col-6"/>
                                        <field name="has_hereditary_disease" class="col-6"/>
                                        <field name="hereditary_details" class="col-6"
                                               attrs="{'readonly': [('has_hereditary_disease', '=', False)]}"/>
                                    </div>

                                    <!-- Chronic Disease -->
                                    <div class="o_row">
                                        <label for="has_chronic_disease" string="Chronic Disease" class="col-6"/>
                                        <field name="has_chronic_disease" class="col-6"/>
                                        <field name="chronic_details" class="col-6"
                                               attrs="{'readonly': [('has_chronic_disease', '=', False)]}"/>
                                    </div>

                                    <!-- Mental Illness -->
                                    <div class="o_row">
                                        <label for="has_mental_illness" string="Mental Illness" class="col-6"/>
                                        <field name="has_mental_illness" class="col-6"/>
                                        <field name="mental_details" class="col-6"
                                               attrs="{'readonly': [('has_mental_illness', '=', False)]}"/>
                                    </div>
                                </group>                                <!--                                <group string="Diseases">-->
                                <!--                                    <field name="member_diseases_ids" nolabel="1">-->
                                <!--                                        <tree editable="bottom">-->
                                <!--                                            <field name="disease_id"/>-->
                                <!--                                            <field name="disease_type" readonly="1"/>-->
                                <!--                                        </tree>-->
                                <!--                                    </field>-->
                                <!--                                </group>-->
                            </page>
                            <page string="Social Insurance and Security">
                                <group>
                                    <group string="Social Insurance">
                                        <field name="social_insurance_income"/>
                                        <field name="social_insurance_status"/>
                                    </group>
                                    <group string="Social Security">
                                        <field name="social_security_income"/>
                                        <field name="social_security_status"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Issues Information" attrs="{'invisible': [('benefit_type', '!=', 'inmate')]}">
                                <group>
                                    <field name="issues_ids">
                                        <tree>
                                            <field name="case_name"/>
                                            <field name="record_start_date"/>
                                            <field name="record_end_date"/>
                                            <field name="prison_prison_id"/>
                                            <field name="release_date"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page string="House Profile" attrs="{'invisible': [('benefit_type', '=', 'inmate')]}">
                                <field name="house_ids">
                                    <tree editable="bottom">
                                        <field name="housing_type"/>
                                        <field name="property_type"/>
                                        <field name="exchange_period"/>
                                        <field name="housing_status"/>
                                        <field name="housing_value"/>
                                        <field name="accommodation_attachments"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_family_member" model="ir.actions.act_window">
            <field name="name">Members</field>
            <field name="res_model">family.member</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_family_member_tree"/>
            <field name="view_ids" eval="[(5, 0, 0),
                                       (0, 0, {'view_mode': 'tree', 'view_id': ref('view_family_member_tree')}), 
                                       (0, 0, {'view_mode': 'form', 'view_id': ref('view_family_member_form')})]"/>
        </record>

        <menuitem id="menu_family_member" name="Members"
                  action="action_family_member"
                  parent="odex_benefit.benefits_root_menu"
                  sequence="1"/>


    </data>
</odoo>