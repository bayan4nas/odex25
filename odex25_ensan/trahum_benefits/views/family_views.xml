<odoo>
    <data>
        <record id="view_family_member_tree" model="ir.ui.view">
            <field name="name">family.member.tree</field>
            <field name="model">family.member</field>
            <field name="arch" type="xml">
                <tree string="Members">
                    <field name="name"/>
                    <field name="member_id_number"/>
                    <field name="member_phone"/>
                    <field name="benefit_type" invisible="1"/>
                </tree>
            </field>
        </record>
        <!--        odoo search view -->
        <record id="view_partner_search" model="ir.ui.view">
            <field name="name">family.member.search</field>
            <field name="model">family.member</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="member_id_number"/>
                    <field name="member_phone"/>
                    <filter string="Has Phone" name="has_phone" domain="[('member_phone', '!=', False)]"/>
                    <filter string="Without Phone" name="without_phone" domain="[('member_phone', '=', False)]"/>
                    <filter string="Has Identification" name="member_id_number"
                            domain="[('member_id_number', '!=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Member ID" name="group_by_id" context="{'group_by': 'member_id_number'}"/>
                        <filter string="Member Phone" name="group_by_phone" context="{'group_by': 'member_phone'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!--        end -->
        <record id="view_family_member_form" model="ir.ui.view">
            <field name="name">family.member.form</field>
            <field name="model">family.member</field>
            <field name="arch" type="xml">
                <form string="Members">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"
                                attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>

                        <button name="action_cancel" string="Reject" type="object" class="oe_highlight"
                                attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>

                        <button name="reset_to_draft" string="RE-set To Draft" type="object" class="oe_highlight"
                                attrs="{'invisible': [('state', 'not in', ['confirmed','cancelled'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,cancelled"/>
                    </header>
                    <sheet>
                        <group>
                            <h1>
                                <field name="name" placeholder="الأسم" readonly="1"/>
                            </h1>

                        </group>
                        <group>
                            <div class="row">
                                <div class="col-md-3">
                                    <h3>
                                        <field name="first_name" placeholder="الاسم الاول" required="1"
                                               class="update_full_name"/>
                                    </h3>
                                </div>

                                <div class="col-md-3">
                                    <h3>
                                        <field name="father_name" placeholder="اسم الاب" required="1"
                                               class="update_full_name"/>
                                    </h3>
                                </div>

                                <div class="col-md-3">
                                    <h3>
                                        <field name="grand_name" placeholder="اسم الجد" required="1"
                                               class="update_full_name"/>
                                    </h3>
                                </div>

                                <div class="col-md-3">
                                    <h3>
                                        <field name="family_name" placeholder="اسم العائلة" required="1"
                                               class="update_full_name"/>
                                    </h3>
                                </div>
                            </div>
                        </group>
                        <group>
                            <group>
                                <field name="benefit_type" invisible="1"/>
                                <field invisible="1" name="inmate_status"/>
                                <field invisible="1" name="prison_id"/>
                                <field name="entitlement_status"/>
                                <field name="released_status"/>
                                <field name="code" invisible="1" readonly="1"/>
                            </group>
                            <group invisible="1">
                                <field name="benefit_id" string="Family Profile"/>
                                <field name="prison_country_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Personal Details">
                                <group>
                                    <group>
                                        <field name="member_id_number"/>
                                        <field name="identity_proof_id"/>
                                        <field name="birth_date"/>
                                        <field name="gender"/>
                                        <field name="qualification_id"/>
                                        <field name="nationality_id"/>
                                    </group>
                                    <group>
                                        <field name="member_phone"/>
                                        <field name="additional_mobile_number"/>
                                        <field name="work_type_id"/>
                                        <field name="birth_place"/>
                                        <field name="relation_id"/>
                                        <field name="marital_status_id"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Education History">
                                <field name="education_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="identity_number"/>
                                        <field name="level_id"/>
                                        <field name="school_name"/>
                                        <field name="path" string="Path"/>
                                        <field name="education_department_id"/>
                                        <field name="grade" string="Grade"/>
                                        <field name="graduation_year"/>
                                        <field name="attachments"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="National Address">
                                <group>
                                    <field name="building_number"/>
                                    <field name="sub_number"/>
                                    <field name="additional_number"/>
                                    <field name="street_name"/>
                                    <field name="district"/>
                                    <field name="city"/>
                                    <field name="postal_code"/>
                                </group>
                            </page>
                            <page string="Comprehensive Rehabilitation">
                                <field name="rehabilitation_ids">
                                    <tree>
                                        <field name="income_value"/>
                                        <field name="disability_type_id"/>
                                        <field name="disability_date"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Health Data">
                                <group>
                                    <group>
                                        <field name="blood_type"/>
                                    </group>
                                </group>
                                <group>
                                    <!-- Hereditary Disease -->
                                    <div class="o_row">
                                        <label for="has_hereditary_disease" string="Hereditary Disease" class="col-6"/>
                                        <field name="has_hereditary_disease" class="col-6"/>
                                        <field name="hereditary_details" class="col-6"
                                               widget="many2one"
                                               attrs="{'readonly': [('has_hereditary_disease', '=', False)]}"/>
                                    </div>

                                    <!-- Chronic Disease -->
                                    <div class="o_row">
                                        <label for="has_chronic_disease" string="Chronic Disease" class="col-6"/>
                                        <field name="has_chronic_disease" class="col-6"/>
                                        <field name="chronic_details" class="col-6"
                                               widget="many2one"
                                               attrs="{'readonly': [('has_chronic_disease', '=', False)]}"/>
                                    </div>

                                    <!-- Mental Illness -->
                                    <div class="o_row">
                                        <label for="has_mental_illness" string="Mental Illness" class="col-6"/>
                                        <field name="has_mental_illness" class="col-6"/>
                                        <field name="mental_details" class="col-6"
                                               widget="many2one"
                                               attrs="{'readonly': [('has_mental_illness', '=', False)]}"/>
                                    </div>
                                </group>                                <!--                                <group string="Diseases">-->
                                <!--                                    <field name="member_diseases_ids" nolabel="1">-->
                                <!--                                        <tree editable="bottom">-->
                                <!--                                            <field name="disease_id"/>-->
                                <!--                                            <field name="disease_type" readonly="1"/>-->
                                <!--                                        </tree>-->
                                <!--                                    </field>-->
                                <!--                                </group>-->
                            </page>
                            <page string="Social Insurance and Security">
                                <group>
                                    <group string="Social Insurance">
                                        <field name="social_insurance_income"/>
                                        <field name="social_insurance_status"/>
                                    </group>
                                    <group string="Social Security">
                                        <field name="social_security_income"/>
                                        <field name="social_security_status"/>
                                    </group>
                                </group>
                            </page>
                            <page invisible="1" string="Issues Information">
                                <group>
                                    <field name="issues_ids">
                                        <tree>
                                            <field name="case_name"/>
                                            <field name="record_start_date"/>
                                            <field name="record_end_date"/>
                                            <field invisible="1" name="prison_prison_id"/>
                                            <field name="release_date"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page invisible="1" string="House Profile">
                                <field name="house_ids">
                                    <tree editable="bottom">
                                        <field name="housing_type"/>
                                        <field name="property_type"/>
                                        <field name="exchange_period"/>
                                        <field name="housing_status"/>
                                        <field name="housing_value"/>
                                        <field name="accommodation_attachments"/>
                                    </tree>
                                </field>
                            </page>
                            <!-- Expenses Page -->
                            <page invisible="1" string="Expenses">
                                <field name="expenses_ids">
                                    <tree editable="top">
                                        <field invisible="1" name="benefit_id"/>
                                        <field name="expenses_type" invisible="1"/>
                                        <field name="expenses_type_custom"/>
                                        <field name="revenue_periodicity"/>
                                        <field name="amount" sum="amount"/>
                                        <field name="side"/>
                                        <field name="attachment"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="expenses_type"/>
                                            <field name="expenses_type_custom"/>
                                            <field name="revenue_periodicity"/>
                                            <field name="amount"/>
                                            <field name="side"/>
                                            <field name="attachment"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <!-- Income and Salary Page -->
                            <page invisible="1" string="Income and Salary">
                                <field name="salary_ids">
                                    <tree editable="bottom">
                                        <field name="benefit_id" invisible="1"/>
                                        <field name="income_type"/>
                                        <field name="side"/>
                                        <field name="salary_amount"/>
                                        <field name="salary_attach" widget="many2many_attachment_preview"/>
                                        <field name="revenue_periodicity"/>
                                        <field name="is_required" invisible="1"/>
                                        <field name="is_default" invisible="1"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="member_id"/>
                                            <field name="income_type"/>
                                            <field name="side"/>
                                            <field name="salary_amount"/>
                                            <field name="salary_attach" widget="many2many_attachment_preview"/>
                                            <field name="revenue_periodicity"/>
                                            <field name="is_required"/>
                                            <field name="is_default"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="action_family_member" model="ir.actions.act_window">
            <field name="name">Members</field>
            <field name="res_model">family.member</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_family_member_tree"/>
            <field name="view_ids" eval="[(5, 0, 0),
                                       (0, 0, {'view_mode': 'tree', 'view_id': ref('view_family_member_tree')}), 
                                       (0, 0, {'view_mode': 'form', 'view_id': ref('view_family_member_form')})]"/>
        </record>

        <menuitem id="menu_family_member" name="Members"
                  action="action_family_member"
                  parent="odex_benefit.benefits_root_menu"
                  sequence="1"/>


    </data>
</odoo>