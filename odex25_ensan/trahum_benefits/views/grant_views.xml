<odoo>
    <data>
        <record id="view_grant_benefit_tree" model="ir.ui.view">
            <field name="name">grant.benefit.tree</field>
            <field name="model">grant.benefit</field>
            <field name="arch" type="xml">
                <tree string="Profiles">
                    <field name="name"/>
                    <field name="detainee_file_id"/>
                    <field name="breadwinner_member_id"/>
                    <field name="member_count"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <record id="view_grant_benefit_form" model="ir.ui.view">
            <field name="name">grant.benefit.form</field>
            <field name="model">grant.benefit</field>
            <field name="arch" type="xml">
                <form string="Family Profile">
                    <!-- Header with statusbar -->
                    <header>

                        <!-- Action Buttons -->
                        <button name="action_submit_call_center" type="object" string="Approve"
                                class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>

                        <button name="action_approve_call_center" type="object" string="Approve Call Center"
                                attrs="{'invisible': [('state', '!=', 'call_center')]}"/>

                        <button name="action_approve_social" type="object" string="Approve Social Researcher"
                                attrs="{'invisible': [('state', '!=', 'social_researcher')]}"/>

                        <button name="action_approve_branch" type="object" string="Approve Branch Manager"
                                attrs="{'invisible': [('state', '!=', 'branch_manager')]}"/>

                        <button name="action_close" type="object" string="Close"
                                class="btn-success"
                                confirm="Are you sure?" attrs="{'invisible': [('state', '!=', 'ceo')]}"/>

                        <button name="action_revert_state" type="object" string="Return"
                                class="btn-secondary"
                                attrs="{'invisible': [('state', 'in', ['draft', 'cancelled', 'closed'])]}"/>

                        <button name="action_cancel" type="object" string="Cancel"
                                class="btn-danger"
                                attrs="{'invisible': [('state', 'in', ['cancelled', 'closed','draft'])]}"/>

                        <button name="reset_to_draft" type="object" string="Reset to Draft"
                                class="btn-secondary"
                                confirm="Are you sure?" attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>

                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,call_center,social_researcher,branch_manager,ceo,closed"/>

                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="previous_state" invisible="1"/>
                                <field name="name" readonly="1"/>
                                <field name="name_member" invisible="1"/>
                                <field name="detainee_file_id"/>
                                <field invisible="1" name="inmate_member_id" readonly="1" force_save="True"
                                       context="{'form_view_ref': 'trahum_benefits.view_family_member_form'}"/>
                                <field name="breadwinner_member_id" invisible="1"/>
                                <field name="branch_details_id"/>
                                <field name="member_count" invisible="1"/>

                            </group>
                        </group>
                        <notebook>
                            <page string="Members">
                                <field name="benefit_member_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="member_id"/>
                                        <field name="relation_id"/>
                                        <field name="is_breadwinner"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Housing">
                                <field name="house_ids">
                                    <tree editable="bottom">
                                        <field name="member_id" invisible="1"/>
                                        <!--                                               domain="['|', ('id', 'in', parent.member_ids), ('id', '=', parent.breadwinner_member_id)]"/>-->
                                        <field name="housing_type"/>
                                        <field name="property_type"/>
                                        <field name="exchange_period"/>
                                        <field name="housing_status"/>
                                        <field name="housing_value"/>
                                        <field name="accommodation_attachments"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="expenses">
                                <group>
                                    <field force_save="1" nolabel="1" name="expenses_ids">
                                        <tree editable="bottom">
                                            <field name="member_id" invisible="1"/>
                                            <!--                                                   domain="['|', ('id', 'in', parent.member_ids), ('id', '=', parent.breadwinner_member_id)]"/>-->
                                            <field name="benefit_id" invisible="1"/>
                                            <field name="expenses_type" invisible="1"/>
                                            <field name="expenses_type_custom"/>
                                            <!--                                            <field name="note"/>-->
                                            <field name="revenue_periodicity"/>
                                            <field name="amount" sum="amount"/>
                                            <field name="side"/>
                                            <field name="attachment"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page string="Income and salary">
                                <field name="salary_ids" force_save="1">
                                    <tree editable="bottom" delete="0">
                                        <field name="benefit_id" invisible="1"/>
                                        <field name="member_id" invisible="1"/>
                                        <!--                                               domain="['|', ('id', 'in', parent.member_ids), ('id', '=', parent.breadwinner_member_id)]"/>-->
                                        <field name="income_type"/>
                                        <field name="side"/>
                                        <field name="salary_amount"/>
                                        <field name="salary_attach" widget="many2many_attachment_preview"/>
                                        <field name="revenue_periodicity"/>
                                        <field name="is_required" invisible="1"/>
                                        <field name="is_default" invisible="1"/>

                                    </tree>
                                </field>
                                <group>
                                    <field name="income_required_attach"/>
                                </group>
                            </page>
                            <page string="Banking information">
                                <group>
                                    <group>
                                        <label for="acc_number"/>
                                        <div class="o_row">
                                            <field name="acc_number" width="100%"/>
                                            <field name="sa_iban"/>
                                        </div>
                                        <field name="acc_holder_name"/>
                                        <field name="account_status"/>
                                        <field name="Add_appendix"/>
                                    </group>
                                    <group attrs="{'invisible': [('account_status', '!=', 'inactive')]}">
                                        <field name="stop_reason"/>
                                        <field name="stop_proof"/>
                                        <field name="delegate_id_number"/>
                                        <field name="delegate_mobile"/>
                                        <field name="delegate_name"/>
                                        <field name="delegate_iban"/>
                                        <field name="delegate_document"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Education History">
                                <field name="education_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="identity_number"/>
                                        <field name="level_id" string="Education Level"/>
                                        <field name="school_name" string="School Name"/>
                                        <field name="path" string="Path"/>
                                        <field name="education_department_id" string="Department"/>
                                        <field name="grade" string="Grade"/>
                                        <field name="graduation_year"/>
                                        <field name="attachments"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Comprehensive Rehabilitation">
                                <field name="rehabilitation_ids">
                                    <tree>
                                        <field name="disability_date"/>
                                        <field name="disability_type_id"/>
                                        <field name="income_value" sum="amount"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Health Data">
                                <group>
                                    <field name="health_data_ids" nolabel="1"
                                           context="{'form_view_ref': 'trahum_benefits.view_family_member_form'}">
                                        <tree>
                                            <field name="name" string="Name"/>
                                            <field name="benefit_id"/>
                                            <field name="blood_type" string="Blood Type"/>
                                            <field name="member_diseases_ids" string="Diseases">
                                            </field>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page string="Attachment">
                                <field name="attachment_id">
                                    <tree>
                                        <field name="attachment_name"/>
                                        <field name="classification"/>
                                        <field name="attachment_attachment"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Need Assessment">
                                <group>
                                    <group>
                                        <field name="total_income" readonly="1"/>
                                        <field name="expected_income" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="member_count" readonly="1"/>
                                        <field name="need_calculator" readonly="1"/>
                                    </group>
                                </group>
                            </page>

                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_grant_benefit_search" model="ir.ui.view">
            <field name="name">grant.benefit.search</field>
            <field name="model">grant.benefit</field>
            <field name="arch" type="xml">
                <search>
                    <field name="detainee_file_id" string="Detainee"/>
                    <field name="breadwinner_member_id" string="Breadwinner"/>
                    <field name="branch_details_id" string="Branch"/>
                    <field name="state" string="State"/>
                    <group expand="0" string="Group By">
                        <filter string="State" name="state" context="{'group_by': 'state'}"/>
                        <filter string="Group by Detainee" name="detainee_file_id"
                                context="{'group_by': 'detainee_file_id'}"/>
                        <filter string="Group by Breadwinner Member" name="breadwinner_member_id"
                                context="{'group_by': 'breadwinner_member_id'}"/>
                        <filter string="Group by Branch" name="branch_details_id"
                                context="{'group_by': 'branch_details_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_family_kanban_custom" model="ir.ui.view">
            <field name="name">famiy.kanban.custom</field>
            <field name="model">grant.benefit</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="state"/>
                    <field name="detainee_file_id"/>
                    <field name="name_member"/>
                    <field name="member_count"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record"
                                 style="border-radius: 10px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); padding: 15px; background-color: #f9f9f9;">

                                <!-- اسم الملف -->
                                <div class="mb-2" style="font-weight: bold; font-size: 16px; color: #003366;">
                                    <field name="name"/>
                                </div>

                                <!-- معلومات بشكل شبكي -->
                                <div class="d-flex flex-column gap-1" style="font-size: 13px; color: #555;">
                                    <div>
                                        <strong>State:</strong>
                                        <field name="state"/>
                                    </div>
                                    <div>
                                        <strong>Breadwinner Name:</strong>
                                        <field name="name_member"/>
                                    </div>
                                    <div>
                                        <strong>Detainee:</strong>
                                        <field name="detainee_file_id"/>
                                    </div>
                                    <div>
                                        <strong>Member Count:</strong>
                                        <field name="member_count"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_grant_benefit" model="ir.actions.act_window">
            <field name="name">Family Profile</field>
            <field name="res_model">grant.benefit</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                                       (0, 0, {'view_mode': 'tree', 'view_id': ref('view_grant_benefit_tree')}), 
                                       (0, 0, {'view_mode': 'form', 'view_id': ref('view_grant_benefit_form')}),
                                       (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_family_kanban_custom')})]"/>
            <field name="search_view_id" ref="view_grant_benefit_search"/>

        </record>

        <menuitem id="menu_grant_benefit" name="Families Profiles"
                  action="action_grant_benefit"
                  parent="odex_benefit.benefits_root_menu"
                  sequence="1"/>


    </data>
</odoo>