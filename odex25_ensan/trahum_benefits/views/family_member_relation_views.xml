<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="view_family_member_relation_search_safe" model="ir.ui.view">
        <field name="name">family.member.relation.search.safe</field>
        <field name="model">family.member.relation</field>
        <field name="arch" type="xml">
            <search string="Search Relations">
                <filter name="gender_m" string="Male" domain="[('gender','=','male')]"/>
                <filter name="gender_f" string="Female" domain="[('gender','=','female')]"/>
                <filter name="exclude" string="Exclude from Need Calculation" domain="[('exclude_need','=',True)]"/>
            </search>
        </field>
    </record>


    <record id="view_family_member_relation_tree" model="ir.ui.view">
        <field name="name">family.member.relation.tree</field>
        <field name="model">family.member.relation</field>
        <field name="arch" type="xml">
            <tree string="Family Member Relations" create="1" edit="1">
                <field name="name"/>
                <field name="gender"/>
                <field name="exclude_need"/>
            </tree>
        </field>
    </record>


    <record id="view_family_member_relation_form" model="ir.ui.view">
        <field name="name">family.member.relation.form</field>
        <field name="model">family.member.relation</field>
        <field name="arch" type="xml">
            <form string="Family Member Relation">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="gender"/>
                        <field name="exclude_need"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_family_member_relation" model="ir.actions.act_window">
        <field name="name">Family Member Relations</field>
        <field name="res_model">family.member.relation</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_family_member_relation_search_safe"/>
    </record>
    <menuitem id="relation_settings_menu"
          name="Relation Settings"
          parent="odex_benefit.menu_benefits_config_organizing"
          action="action_family_member_relation"
          sequence="3"/>

</odoo>
