<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree and Form Views for res.prison.country -->
        <record id="view_res_prison_country_tree" model="ir.ui.view">
            <field name="name">res.prison.country.tree</field>
            <field name="model">res.prison.country</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_res_prison_country_form" model="ir.ui.view">
            <field name="name">res.prison.country.form</field>
            <field name="model">res.prison.country</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <field name="prison_ids">
                            <tree>
                                <field name="name"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree and Form Views for res.prison -->
        <record id="view_res_prison_tree" model="ir.ui.view">
            <field name="name">res.prison.tree</field>
            <field name="model">res.prison</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="country_id"/>
                </tree>
            </field>
        </record>

        <record id="view_res_prison_form" model="ir.ui.view">
            <field name="name">res.prison.form</field>
            <field name="model">res.prison</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="country_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Actions for res.prison.country -->
        <record id="action_res_prison_country" model="ir.actions.act_window">
            <field name="name">Prison Countries</field>
            <field name="res_model">res.prison.country</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Actions for res.prison -->
        <record id="action_res_prison" model="ir.actions.act_window">
            <field name="name">Prisons</field>
            <field name="res_model">res.prison</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- Menu Items and Actions -->
        <menuitem id="menu_prison_root" name="Prison Management" parent="odex_benefit.benefit_tools"/>
        <menuitem id="menu_prison" name="Prisons" parent="menu_prison_root" action="action_res_prison"/>
        <menuitem id="menu_prison_country" name="Prison Countries" parent="menu_prison_root"
                  action="action_res_prison_country"/>

    </data>
</odoo>