<odoo>
    <record id="view_res_district_tree" model="ir.ui.view">
        <field name="name">res.district.tree</field>
        <field name="model">res.district</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="city_id"/>
            </tree>
        </field>
    </record>

    <record id="view_res_district_form" model="ir.ui.view">
        <field name="name">res.district.tree</field>
        <field name="model">res.district</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="city_id"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="res_district_list_action">
        <field name="name">Districts</field>
        <field name="res_model">res.district</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the first City
            </p>
        </field>
    </record>

    <menuitem id="res_district_menu" name="Districts" sequence="2"
              parent="odex_benefit.menu_benefits_config_addresses" action="res_district_list_action"/>

</odoo>