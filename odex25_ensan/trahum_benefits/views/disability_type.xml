<odoo>
    <record id="view_disability_type_tree" model="ir.ui.view">
        <field name="name">disability.type.tree</field>
        <field name="model">disability.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_disability_type_form" model="ir.ui.view">
        <field name="name">disability.type.form</field>
        <field name="model">disability.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="res_disability_type_list_action">
        <field name="name">Disabilities</field>
        <field name="res_model">disability.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the first Disability
            </p>
        </field>
    </record>

    <menuitem id="disability_type_menu" name="Disabilities" sequence="2"
              parent="odex_benefit.menu_benefits_config_benefits" action="res_disability_type_list_action"/>

</odoo>