<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="budget_layout">
        <!-- Multicompany -->
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>

        <t t-call="odex25_budget_saip.budget_layout_template">
            <t t-raw="0"/>
        </t>

    </template>

    <template id="budget_layout_template">
        <div class="article o_report_layout_standard">
            <t t-raw="0"/>
        </div>
    </template>


    <record id="paperformat_budget_landscape" model="report.paperformat">
        <field name="name">Budget Landscape</field>
        <field name="default" eval="True"/>
        <field name="format">A3</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">30</field>
        <field name="margin_bottom">23</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">20</field>
        <field name="dpi">130</field>
    </record>

    <record id="account_budget_report_action_xlsx" model="ir.actions.report">
        <field name="name">Account Budget Report</field>
        <field name="model">crossovered.budget.lines</field>
        <field name="report_type">xlsx</field>
        <field name="report_name">odex25_budget_saip.account_budget_report_xlsx</field>
        <field name="print_report_name">Budget Report</field>
        <field name="report_file">Account Budget Report</field>
        <field name="binding_type">report</field>
    </record>

    <record id="account_budget_report_action_pdf" model="ir.actions.report">
        <field name="model">crossovered.budget.lines</field>
        <field name="name">Account Budget Report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">odex25_budget_saip.account_budget_report</field>
        <field name="print_report_name">Budget Report</field>
        <field name="paperformat_id" ref="paperformat_budget_landscape"/>
    </record>

    <record id="account_budget_report_action_html" model="ir.actions.report">
        <field name="model">crossovered.budget.lines</field>
        <field name="name">Account Budget Report</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">odex25_budget_saip.account_budget_report</field>
        <field name="print_report_name">Budget Report</field>
        <field name="paperformat_id" ref="paperformat_budget_landscape"/>
    </record>

        <report
            id="action_report_budget_operation"
            string="Budget Operation Report"
            model="budget.operations"
            report_type="qweb-pdf"
            name="odex25_budget_saip.report_budget_operation"
            file="odex25_budget_saip.report_budget_operation"
            print_report_name="'Budget Transfer Request Form - %s' % (object.name)"
        />

</odoo>
