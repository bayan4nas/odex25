<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="group_review_budget" model="res.groups">
            <field name="name">Review</field>
            <field name="category_id" ref="base.module_category_accounting_and_finance"/>
        </record>

        <record id="group_authentication_budget" model="res.groups">
            <field name="name">Authentication(Executive Committee)</field>
            <field name="category_id" ref="base.module_category_accounting_and_finance"/>
        </record>
        <record id="group_approve_budget" model="res.groups">
            <field name="name">Approve(Vice President and Board of Directors)</field>
            <field name="category_id" ref="base.module_category_accounting_and_finance"/>
        </record>

        <record id="contract_manager_contract_payment_rule" model="ir.rule">
        <field name="name">Contract Manager: views all payment forms record</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="domain_force">[('is_related_to_cotract','=', True)]</field>
        <field name="groups" eval="[(4, ref('contract.group_contract_manager'))]"/>
    </record>

    <record id="other_user_other_payment_rule" model="ir.rule">
        <field name="name">Contract Manager: views all payment forms record</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="domain_force">[('is_related_to_cotract','=', False)]</field>
        <field name="groups" eval="[(4, ref('account.group_account_invoice'))]"/>
    </record>

    </data>
</odoo>
