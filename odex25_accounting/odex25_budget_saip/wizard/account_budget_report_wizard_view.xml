<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="account_budget_report_form">
            <field name="name">account.budget.report.wizard.form</field>
            <field name="model">account.budget.report.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="fiscalyear_id"
                                       options="{'no_create': True, 'no_create_edit':True,'no_open': True}"/>
                                <field name="date_from" required="1"/>
                                <field name="date_to" required="1"/>
                            </group>
                            <group>
                                <field name="general_budget_id"
                                       options="{'no_create': True, 'no_create_edit':True,'no_open': True}"/>
                                <field name="item_budget_id" widget="many2many_tags"
                                       options="{'no_create': True, 'no_create_edit':True,'no_open': True}"/>
                                <field name="analytic_account_id" invisible="1"
                                       options="{'no_create': True, 'no_create_edit':True,'no_open': True}"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="print_report_pdf" string="Print PDF" type="object" class="oe_highlight"/>
                        <button name="print_report_xlsx" string="Print Excel" type="object" class="oe_highlight"/>
                        <button name="print_report_html" string="View" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <!--Employee Cost-->
        <record id="account_budget_report_action" model="ir.actions.act_window">
            <field name="name">Budget Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.budget.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="budget_report_wizard_menu" parent="account_budget_custom.budget_reporting_menu"
                  action="account_budget_report_action"/>

    </data>
</odoo>