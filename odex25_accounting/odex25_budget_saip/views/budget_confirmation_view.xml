<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_view_budget_confirmation_form" model="ir.ui.view">
        <field name="name">budget.confirmation.form</field>
        <field name="model">budget.confirmation</field>
        <field name="inherit_id" ref="account_budget_custom.view_budget_confirmation_form"/>
        <field name="arch" type="xml">
<!--&lt;!&ndash;            todo start &ndash;&gt;-->
<!--            <xpath expr="//field[@name='state']" position="attributes">-->
<!--                <attribute name="statusbar_visible">draft,bdgt_dep_mngr,done</attribute>-->
<!--            </xpath>-->
<!--&lt;!&ndash;            todo end &ndash;&gt;-->
            <button name="reject" position="replace">
                <button name="action_reject" states="bdgt_dep_mngr,confirmed" string="Reject" type="object" class="oe_highlight" groups="account_budget_custom.group_manager_budget"/>
            </button>
            <xpath expr="//notebook//field[@name='lines_ids']" position="replace">
                <field name="lines_ids" options="{'no_create': True, 'no_open': True}">
                     <tree create="false" delete="false">
                        <field name="account_id"/>
                        <field name="item_budget_id"/>
                        <field name="analytic_account_id"/>
                        <field name="description"/>
                        <field name="remain" force_save="1" readonly="1"/>
                        <field name="amount" readonly="1"/>
                        <field name="new_balance" readonly="1"/>
                    </tree>
                </field>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="set_draft" states="cancel" string="Rest To Draft" type="object" class="oe_highlight"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="budget_management" string="Budget Management">
                    <group name="budget_management">
                        <group>
                            <field name="permission" widget="radio" options="{'horizontal': true}"
                                   attrs="{'required':[('state','=','bdgt_dep_mngr')],'readonly':[('state' , '!=' , 'bdgt_dep_mngr')]}"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="request_id" readonly="1" attrs="{'invisible':[('request_id' , '=' , False)]}"/>
                            <field name="contract_id" readonly="1"
                                   attrs="{'invisible':[('contract_id' , '=' , False)]}"/>
                            <field name="po_id" readonly="1" attrs="{'invisible':[('po_id' , '=' , False)]}"/>
                        </group>
                        <group>
                            <field name="purchase_request_type" readonly="1"
                                   attrs="{'invisible':[('request_id' , '=' , False)]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//field[@name='exceed_budget']" position="attributes">
                <attribute name="attrs">{'invisible':[('state' , '!=' , 'bdgt_dep_mngr')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='exceed_budget']" position="after">
                <field name="reminder" readonly="1" attrs="{'invisible':[('exceed_budget' , '=' , False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="account_budget_custom.main_budgets_menu" model="ir.ui.menu">
        <field name="parent_id" eval="False"/>
        <field name="web_icon">odex25_purchase_saip,static/description/Budgets.png</field>
    </record>

</odoo>
