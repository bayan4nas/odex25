<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_budget_saip_employee_other_request_form_view" model="ir.ui.view">
        <field name="name">employee.other.request.view.form.inherit</field>
        <field name="model">employee.other.request</field>
        <field name="inherit_id" ref="employee_requests.employee_other_request_form_view"/>
        <field name="arch" type="xml">
            <field name="job_id" position="after">
                <field name="rule_id" domain="[('compensation_rule', '=', True)]"
                       options="{'no_create': True, 'no_open': True}"
                       groups="hr.group_hr_user"
                       attrs="{'invisible':['|',('request_type','not in','compensation'),('state','in','draft')],
                      'readonly':[('state','not in',['hr_operation'])],'required':[('state','=','hr_operation')]}"/>
                <field name="journal_id" options="{'no_create': True, 'no_open': True}"
                       domain="[('type','=','purchase'),('hr_journal', '=', True)]"
                       attrs="{'invisible':['|',('request_type','not in',['compensation']),('state','not in',['confirm','approved'])],
                       'required':[('state','=','confirm')],'readonly':[('state','not in',['confirm'])]}"/>
                <field name="move_id" attrs="{'invisible':['|',('request_type','not in',['compensation']),('state','!=','approved')]}" readonly="1"/>
            </field>

        </field>
    </record>
</odoo>