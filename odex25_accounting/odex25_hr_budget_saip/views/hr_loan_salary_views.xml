<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="loan_request_type_form_inherit" model="ir.ui.view">
        <field name="name">loan.request.type.inherit2</field>
        <field name="model">loan.request.type</field>
        <field name="inherit_id" ref="hr_loans_salary_advance.loan_request_type_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='account_id']" position="after">
                <field name="item_budget_id" required="1" options="{'no_create': True, 'no_open': True}"/>
            </xpath>
            <xpath expr="//field[@name='journal_id']" position="attributes">
            <attribute name="domain">[('type','=','purchase'),('hr_journal', '=', True)]</attribute>
            </xpath>
        </field>
    </record>


     <record id="employee_reward_form_view_inherit" model="ir.ui.view">
            <field name="name">custom.hr.employee.reward</field>
            <field name="model">hr.employee.reward</field>
            <field name="inherit_id" ref="exp_payroll_custom.employee_reward_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='account_id']" position="after">
                    <field name="move_id" readonly="1"  attrs="{'invisible':[('state', '!=', 'done')]}"/>
                    <field name="item_budget_id"  options="{'no_create': True, 'no_open': True}"  attrs="{'invisible':['|',('transfer_type','!=','accounting'),('state', '!=', 'hrm')],
                                            'readonly':[('state','!=','hrm')], 'required': [('state', '=', 'hrm')]}"/>
                </xpath>
                <xpath expr="//field[@name='journal_id']" position="attributes">
                <attribute name="domain">[('type','=','purchase'),('hr_journal', '=', True)]</attribute>
                </xpath>

            </field>
        </record>

</odoo>
