<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_return_state_form" model="ir.ui.view">
        <field name="name">return.state.form</field>
        <field name="model">return.state.account</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field invisible="1" name="account_id" readonly="1"/>
                    <field required="1" name="state" readonly="0"/>
                    <field name="new_state" readonly="0" invisible="1" force_save="True"/>
<!--                    <field name="old_state" readonly="0" invisible="1" force_save="True"/>-->
                </group>
                <group>
                    <field name="note" required="1"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" class="oe_highlight" name="confirm_return"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_open_return_state_wizard_2" model="ir.actions.act_window">
        <field name="name">Open Return State Wizard</field>
        <field name="res_model">return.state.account</field>
        <field name="view_mode">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_account_id': active_id}</field>
    </record>

</odoo>
