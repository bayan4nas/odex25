<odoo>
    <record id="view_move_form_inherit_my_remove_post" model="ir.ui.view">
        <field name="name">account.move.form.inherit.my.remove.post</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="priority" eval="1500"/>
        <field name="arch" type="xml">
            <!-- Hide both Post and Confirm buttons -->
            <xpath expr="//button[@name='action_post' ][2]" position="replace"/>


            <xpath expr="//button[@name='action_department']" position="after">
                <button name="action_financial_manager" type="object" string="Financial Manager" class="oe_highlight"
                        attrs="{'invisible': [('state', 'not in', ('financial_manager'))]}"
                        groups="odex25_account_payment_fix.group_accounting_manager"/>


                <button name="action_sector_manager" type="object" string="Sector Manager" class="oe_highlight"
                        attrs="{'invisible': [('state', 'not in', ('sector_manager'))]}"
                        groups="hr_trahum.group_sector_head_approval"/>

                <button name="action_general_secretary" type="object" string="General Secretary" class="oe_highlight"
                        attrs="{'invisible': [('state', 'not in', ('general_secretary'))]}"
                        groups="odex25_account_payment_fix.group_general_manager"/>
            </xpath>

            <!-- Modify Accountant button group -->
            <xpath expr="//button[@name='action_accountant']" position="attributes">
                <attribute name="groups">exp_budget_check.group_asset_accountant</attribute>
            </xpath>
        </field>
    </record>
</odoo>
