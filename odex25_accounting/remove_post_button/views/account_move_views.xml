<odoo>
    <record id="view_move_form_inherit_my_remove_post" model="ir.ui.view">
        <field name="name">account.move.form.inherit.my.remove.post</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="priority" eval="1500"/>
        <field name="arch" type="xml">
            <!-- Hide both Post and Confirm buttons -->
            <xpath expr="//button[@name='action_post' ][2]" position="replace"/> 
            
             
          
            <xpath expr="//button[@name='action_head_of_department']" position="attributes">
                <attribute name="groups">odex25_account_payment_fix.group_depart_manager</attribute>
            </xpath> 

            <!-- Modify Accountant button group -->
            <xpath expr="//button[@name='action_accountant']" position="attributes">
                <attribute name="groups">exp_budget_check.group_asset_accountant</attribute>
            </xpath>
        </field>
    </record>
</odoo>