<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_journal_contract_journal_inherit" model="ir.ui.view">
            <field name="name">account.journal.contract_journal.form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <field name="refund_sequence" position="after">
                    <field name="contract_journal"/>
                </field>
            </field>
    </record>
    <record id="view_purchase_order_inherit_form" model="ir.ui.view">
        <field name="name">purchase.order.inherit.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase_requisition_custom.purchase_order_custom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook[1]" position="inside">
                <page string="Contract Info" attrs="{'invisible' : [('type' , '!=' , 'contract')]}">
                    <group col="4" colspan="2">
                        <field name="contract_template_id" attrs="{'invisible' : [('type' , '!=' , 'contract')],'readonly':[('state','!=','draft')]}"/>
<!--                        <field name="contract_name" force_save="1" attrs="{'invisible' : [('type' , '!=' , 'contract')],'readonly':[('state','!=','draft')],'required' : [('state' , '=' , 'draft'),('type' , '=' , 'contract')]}"/>-->
                        <field name="contract_id" attrs="{'invisible' : [('type' , '!=' , 'contract')],'readonly':[('state','!=','draft')]}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
